    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\RoomManagementSystem.BusinessLayer\RoomManagementSystem.BusinessLayer.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Images\*.png" />
