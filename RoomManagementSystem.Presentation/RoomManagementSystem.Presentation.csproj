  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
    <PackageReference Include="FreeSpire.Doc" Version="12.2.0" />

    <PackageReference Include="Microsoft.Data.SqlClient" Version="6.1.2" />

    <PackageReference Include="ScottPlot.WPF" Version="5.1.57" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="ViewModels\BillingViewModel.cs">
      <Generator>MSBuild:Compile</Generator>
    </Compile>

    <PackageReference Include="MaterialDesignThemes" Version="5.3.0" />

  </ItemGroup>

  <ItemGroup>
    <None Include="..\Shared\ConnectionStrings.config">
      <Link>ConnectionStrings.config</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="Templates\mau-hop-dong-thue-nha-o.docx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
