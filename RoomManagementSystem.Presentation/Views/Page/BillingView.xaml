<UserControl x:Class="RoomManagementSystem.Presentation.Views.Page.BillingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="900"
             d:DesignWidth="1400"
             Background="#F5F6FA"
             FontFamily="Roboto"
             
             x:Name="BillingPage">

    <UserControl.Resources>
        <Style x:Key="PhongListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,1,0,1"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#2C2C54"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd"
                                        Property="Background"
                                        Value="#F5F3FF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd"
                                        Property="Background"
                                        Value="#E0DFFF"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">

        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Hóa đơn"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#1E1E2F"
                       Margin="0,0,0,24"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Padding="16"
                        CornerRadius="12"
                        Background="#F9FAFB"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        Margin="0,0,16,0">

                    <StackPanel>
                        <TextBlock Text="Danh sách phòng"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   Foreground="#1E1E2F"
                                   Margin="0,0,0,12"/>

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding DanhSachNha}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="{Binding DiaChi}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="#444"
                                                       Margin="0,0,0,6"/>

                                            <Border Background="#F9F8FF"
                                                    CornerRadius="10"
                                                    Padding="8"
                                                    BorderBrush="#ECE9FE"
                                                    BorderThickness="1">

                                                <ListBox ItemsSource="{Binding DanhSachPhong}"
                                                         
                                                         SelectedItem="{Binding DataContext.SelectedPhong, 
                                                                                RelativeSource={RelativeSource AncestorType=ItemsControl}, 
                                                                                Mode=TwoWay}"
                                                         
                                                         BorderThickness="0"
                                                         Background="Transparent"
                                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                         ItemContainerStyle="{StaticResource PhongListBoxItemStyle}">

                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding MaPhong}" />
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </Border>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1"
                        Padding="24"
                        CornerRadius="12"
                        Background="White"
                        Margin="12,0,12,0"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1">

                    <StackPanel>

                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Plumeria Family"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#1E1E2F"/>

                                <TextBlock Text="+84 9 0808 3890 | plumeriafamily@outlook.com"
                                           Foreground="#777"
                                           FontSize="12"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding SelectedBillInfo.MaHoaDon, StringFormat='#{0}'}" FontSize="12" Foreground="#777" TextAlignment="Right"/>
                                <TextBlock Text="Tổng số tiền" FontSize="13" Foreground="#444" Margin="0,4,0,0" TextAlignment="Right"/>
                                <TextBlock Text="{Binding TongTienCot2, StringFormat='{}{0:N0} VND'}"  FontSize="22" FontWeight="Bold" Foreground="#1E1E2F" TextAlignment="Right"/>
                            </StackPanel>
                        </Grid>

                        <Border BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,24">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                    <TextBlock Text="Ngày lập hóa đơn" FontSize="12" Foreground="#777"/>
                                    <TextBlock Text="{Binding SelectedBillInfo.NgayLapHoaDon, StringFormat='dd/MM/yyyy'}" FontSize="13" FontWeight="SemiBold" Foreground="#1E1E2F" Margin="0,2,0,6"/>
                                    <TextBlock Text="Thời kỳ" FontSize="12" Foreground="#777"/>
                                    <TextBlock Text="{Binding SelectedBillInfo.ThoiKy}" FontSize="13" FontWeight="SemiBold" Margin="0,2,0,6"/>
                                    <TextBlock Text="Thời gian thanh toán" FontSize="12" Foreground="#777"/>
                                    <TextBlock Text="Trong vòng 15 ngày" FontSize="13" FontWeight="SemiBold" Margin="0,2,0,6"/>
                                    <TextBlock Text="Ngày hạn thanh toán" FontSize="12" Foreground="#777"/>
                                    <TextBlock Text="{Binding SelectedBillInfo.NgayHanThanhToan, StringFormat='dd/MM/yyyy'}" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Phòng cần thanh toán" FontSize="12" Foreground="#777"/>
                                    <TextBlock Text="{Binding SelectedBillInfo.MaPhong}" FontSize="13" FontWeight="SemiBold" Margin="0,2,0,6"/>
                                    <TextBlock Text="{Binding SelectedBillInfo.TenNha, StringFormat='Nhà: {0}'}" FontSize="12" Foreground="#555"/>
                                    <TextBlock Text="{Binding SelectedBillInfo.DanhSachNguoiThue, StringFormat='Đến: {0}'}" TextWrapping="Wrap" FontSize="12" Foreground="#555" Margin="0,0,0,6"/>
                                    <TextBlock Text="{Binding SelectedBillInfo.SoNguoiHienTai, StringFormat='Số người lưu trú: {0}'}" FontSize="12" Foreground="#555" Margin="0,0,0,6"/>
                                    <TextBlock Text="Ghi chú" FontSize="12" Foreground="#777" Margin="0,4,0,2"/>
                                    <TextBlock Text="Cảm ơn quý khách đã lưu trú tại đây. Vui lòng thanh toán trong thời hạn."
                                               TextWrapping="Wrap"
                                               FontSize="12"
                                               Foreground="#555"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <DataGrid x:Name="DetailDataGrid"
                                  ItemsSource="{Binding ChiTietHoaDon}"    
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  BorderThickness="0"
                                  Background="#FFF7F7F7"
                                  Margin="0,0,0,24"
                                  VerticalGridLinesBrush="Transparent"
                                  HorizontalGridLinesBrush="#FFE0E0E0"
                                  IsReadOnly="True">


                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F3F4F6"/>
                                    <Setter Property="Foreground" Value="#667085"/>
                                    <Setter Property="FontWeight" Value="Normal"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="10,6"/>
                                    <Setter Property="FontSize" Value="10"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="NỘI DUNG CHI TIẾT" Binding="{Binding TenDichVu}" Width="2*"/>
                                <DataGridTextColumn Header="ĐƠN VỊ" Binding="{Binding DVT}" Width="*"/>
                                <DataGridTextColumn Header="ĐƠN GIÁ" Binding="{Binding DonGia, StringFormat='{}{0:N0}'}" Width="*"/>
                                <DataGridTextColumn Header="SỐ LƯỢNG" Binding="{Binding SoLuong}" Width="*"/>
                                <DataGridTextColumn Header="THÀNH TIỀN" Binding="{Binding ThanhTien, StringFormat='{}{0:N0} VND'}" Width="1.5*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                    </StackPanel>
                </Border>


                <Border Grid.Column="2" Padding="20" CornerRadius="12"
                        Background="White" Margin="15,0,0,0"
                        BorderBrush="#E0E0E0"
                        Width="290"
                        BorderThickness="1">
                    

                    <StackPanel>


                        <!-- Nút xuất Excel -->
                        <Button Content="Xuất Excel"
                                Width="290"
                                Height="32"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Center"
                                Command="{Binding XuatExcelCommand}" />

                        <TextBlock Text="Tóm tắt" FontWeight="Bold" FontSize="16" Margin="0,10,0,10"/>

                        


                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            
                        </Grid>

                        <Separator Margin="0,0,0,10"/>

                        <ItemsControl ItemsSource="{Binding DanhSachTomTat}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <Ellipse Width="8" Height="8" Fill="#22C55E" VerticalAlignment="Top" Margin="0,5,10,0"/>
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding TieuDe}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding MaSo}" FontWeight="Bold" Margin="2,0,0,0"/>
                                            </StackPanel>

                                            <TextBlock Text="{Binding Ngay, StringFormat='dd/MM/yyyy'}" Foreground="Gray" FontSize="12"/>
                                            <TextBlock Text="{Binding SoTien, StringFormat='Số tiền {0:N0} VND'}" Foreground="#111827" FontSize="13" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Border Background="#FDF2F8" CornerRadius="6" Margin="0,15,0,0" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Số tiền cần trả" FontWeight="Bold"/>
                                <Border Grid.Column="1"
                                        Background="#F3E8FF"
                                        CornerRadius="4"
                                        Padding="6,2"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding TongTienCanTra, StringFormat='{}{0:N0} VND'}"
                                               FontWeight="Bold"
                                               Foreground="#6B21A8"/>
                                </Border>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>