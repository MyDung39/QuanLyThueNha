<UserControl x:Class="RoomManagementSystem.Presentation.Views.Page.ReportManagement.ReportManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             
             xmlns:vm="clr-namespace:RoomManagementSystem.Presentation.ViewModels"
             xmlns:local="clr-namespace:RoomManagementSystem.Presentation.Views.Page.ReportManagement"
             
             mc:Ignorable="d"
             d:DesignHeight="794" d:DesignWidth="1302"
             FontFamily="Roboto"
             Background="White">

    <!-- ✅ SỬA LẠI: Gán DataContext ở đây, bên ngoài Resources -->
    <UserControl.DataContext>
        <vm:ReportManagementViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- DataTemplate bây giờ sẽ hoạt động -->
        <DataTemplate DataType="{x:Type vm:ReportMonthlyRevenueViewModel}">
            <local:ReportMonthlyRevenueView/>
        </DataTemplate>


        <DataTemplate DataType="{x:Type vm:ReportMonthlyExpenseViewModel}">
            <local:ReportMonthlyExpenseView/>
        </DataTemplate>

        <Style x:Key="HeaderTabRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#586A84"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border x:Name="BottomBar" Height="2" Background="#FFB27D" VerticalAlignment="Bottom" Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="#FFB27D"/>
                                <Setter TargetName="BottomBar" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="18,17,18,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tabs header -->
        <Border Grid.Row="0" Background="White" CornerRadius="10" Height="62">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton Grid.Column="0"
                             Style="{StaticResource HeaderTabRadioButtonStyle}"
                             Content="Doanh thu tháng"
                             GroupName="ReportTabs"
                             IsChecked="True"
                             Command="{Binding ChangeTabCommand}"
                             CommandParameter="Doanh thu"/>
                <RadioButton Grid.Column="1"
                             Style="{StaticResource HeaderTabRadioButtonStyle}"
                             Content="Chi phí tháng"
                             GroupName="ReportTabs"
                             Command="{Binding ChangeTabCommand}"
                             CommandParameter="Chi phí"/>
                <RadioButton Grid.Column="2"
                             Style="{StaticResource HeaderTabRadioButtonStyle}"
                             Content="Lợi nhuận tháng"
                             GroupName="ReportTabs"
                             Command="{Binding ChangeTabCommand}"
                             CommandParameter="Lợi nhuận"/>
                <RadioButton Grid.Column="3"
                             Style="{StaticResource HeaderTabRadioButtonStyle}"
                             Content="Danh sách phòng"
                             GroupName="ReportTabs"
                             Command="{Binding ChangeTabCommand}"
                             CommandParameter="Danh sách phòng"/>
                <RadioButton Grid.Column="4"
                             Style="{StaticResource HeaderTabRadioButtonStyle}"
                             Content="Công nợ"
                             GroupName="ReportTabs"
                             Command="{Binding ChangeTabCommand}"
                             CommandParameter="Công nợ"/>
            </Grid>
        </Border>

        <!-- Tab content -->
        <ContentControl Content="{Binding CurrentReportViewModel}" Grid.Row="2"/>
    </Grid>
</UserControl>
