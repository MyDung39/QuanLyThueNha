<UserControl x:Class="RoomManagementSystem.Presentation.Views.Page.ServiceManagement.ServiceOtherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignWidth="974" d:DesignHeight="624"
             FontFamily="Roboto"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Style cho các nhãn (TextBlock) -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Style cho TextBox nhập liệu -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="#F2F6FA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="materialDesign:TextFieldAssist.DecorationVisibility" Value="Hidden"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Container chính màu trắng với bo góc -->
        <Border Background="White" CornerRadius="10" Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <!-- Vùng nội dung -->
                    <RowDefinition Height="Auto"/>
                    <!-- Vùng nút Lưu -->
                </Grid.RowDefinitions>

                <!-- Vùng nội dung chính -->
                <StackPanel Grid.Row="0" Margin="20">
                    <!-- Mục Internet -->
                    <TextBlock Text="Internet" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                    <TextBox x:Name="InternetCostTextBox" 
                             Style="{StaticResource InputTextBoxStyle}"
                             Margin="0,8,0,0"
                             materialDesign:HintAssist.Hint="Nhập chi phí Internet"/>

                    <!-- Mục Vệ sinh -->
                    <TextBlock Text="Vệ sinh" Style="{StaticResource LabelStyle}" FontWeight="Bold" Margin="0,24,0,0"/>
                    <TextBox x:Name="CleaningCostTextBox" 
                             Style="{StaticResource InputTextBoxStyle}"
                             Margin="0,8,0,0"
                             materialDesign:HintAssist.Hint="Nhập chi phí Vệ sinh"/>

                    <!-- Mục Rác -->
                    <TextBlock Text="Rác" Style="{StaticResource LabelStyle}" FontWeight="Bold" Margin="0,24,0,0"/>
                    <TextBox x:Name="TrashCostTextBox" 
                             Style="{StaticResource InputTextBoxStyle}"
                             Margin="0,8,0,0"
                             materialDesign:HintAssist.Hint="Nhập chi phí Rác"/>

                    <!-- Tổng -->
                    <Separator Margin="0,32,0,16"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Tổng: " Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                        <TextBlock x:Name="TotalText" Text="0 VND" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>

                <!-- Nút Lưu -->
                <Button Grid.Row="1" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom"
                        Margin="0,20,20,20"
                        Width="100" Height="36"
                        Click="SaveButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFB27D"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="18" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Lưu"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>