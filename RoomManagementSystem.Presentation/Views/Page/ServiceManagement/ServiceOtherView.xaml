<UserControl x:Class="RoomManagementSystem.Presentation.Views.Page.ServiceManagement.ServiceOtherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignWidth="974" d:DesignHeight="624"
             FontFamily="Roboto"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Style cho các nhãn (TextBlock) -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Style cho TextBox nhập liệu -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="#F2F6FA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="materialDesign:TextFieldAssist.DecorationVisibility" Value="Hidden"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Container chính màu trắng với bo góc -->
        <Border Background="White" CornerRadius="10" Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <!-- Vùng nội dung -->
                    <RowDefinition Height="Auto"/>
                    <!-- Vùng nút Lưu -->
                </Grid.RowDefinitions>

                <!-- Vùng nội dung chính -->
                <ScrollViewer Grid.Row="0" Margin="20" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Thông tin chung -->
                        <TextBlock Text="Mã phòng" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                        <TextBox x:Name="MaPhongTextBox" Style="{StaticResource InputTextBoxStyle}" Margin="0,8,0,12" materialDesign:HintAssist.Hint="Nhập mã phòng (ví dụ: PHONG001)"
                                 Text="{Binding SelectedPhong.MaPhong}"/>

                        <TextBlock Text="Thời kỳ" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                        <TextBox x:Name="ThoiKyTextBox" Style="{StaticResource InputTextBoxStyle}" Margin="0,8,0,20" materialDesign:HintAssist.Hint="MM/yyyy"/>

                        <TextBlock Text="Internet" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <RadioButton x:Name="InternetYesRadio" GroupName="InternetGroup" Content="Có" Margin="0,0,16,0" Checked="OnSelectionChanged"/>
                            <RadioButton x:Name="InternetNoRadio" GroupName="InternetGroup" Content="Không" IsChecked="True" Checked="OnSelectionChanged"/>
                        </StackPanel>
                        <TextBox x:Name="InternetCostTextBox"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Margin="0,8,0,0"
                                 IsEnabled="{Binding IsChecked, ElementName=InternetYesRadio}"
                                 Text="50000"/>

                        <TextBlock Text="Sử dụng máy giặt" Style="{StaticResource LabelStyle}" FontWeight="Bold" Margin="0,24,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <RadioButton x:Name="CleaningYesRadio" GroupName="CleaningGroup" Content="Có" Margin="0,0,16,0" Checked="OnSelectionChanged"/>
                            <RadioButton x:Name="CleaningNoRadio" GroupName="CleaningGroup" Content="Không" IsChecked="True" Checked="OnSelectionChanged"/>
                        </StackPanel>
                        <TextBox x:Name="CleaningCostTextBox"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Margin="0,8,0,0"
                                 IsEnabled="{Binding IsChecked, ElementName=CleaningYesRadio}"
                                 Text="35000"/>

                        <TextBlock Text="Rác" Style="{StaticResource LabelStyle}" FontWeight="Bold" Margin="0,24,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <RadioButton x:Name="TrashYesRadio" GroupName="TrashGroup" Content="Có" Margin="0,0,16,0" Checked="OnSelectionChanged"/>
                            <RadioButton x:Name="TrashNoRadio" GroupName="TrashGroup" Content="Không" IsChecked="True" Checked="OnSelectionChanged"/>
                        </StackPanel>
                        <TextBox x:Name="TrashCostTextBox"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Margin="0,8,0,0"
                                 IsEnabled="{Binding IsChecked, ElementName=TrashYesRadio}"
                                 Text="30000"/>

                        <TextBlock Text="Phí gửi xe (từ 2 xe/phòng)" Style="{StaticResource LabelStyle}" FontWeight="Bold" Margin="0,24,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <RadioButton x:Name="ParkingYesRadio" GroupName="ParkingGroup" Content="Có" Margin="0,0,16,0" Checked="OnSelectionChanged"/>
                            <RadioButton x:Name="ParkingNoRadio" GroupName="ParkingGroup" Content="Không" IsChecked="True" Checked="OnSelectionChanged"/>
                        </StackPanel>
                        <TextBox x:Name="ParkingCostTextBox"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Margin="0,8,0,0"
                                 IsEnabled="{Binding IsChecked, ElementName=ParkingYesRadio}"
                                 Text="100000"/>

                        <TextBlock Text="Trễ hạn" Style="{StaticResource LabelStyle}" FontWeight="Bold" Margin="0,24,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <RadioButton x:Name="LateFeeYesRadio" GroupName="LateFeeGroup" Content="Có" Margin="0,0,16,0" Checked="OnSelectionChanged"/>
                            <RadioButton x:Name="LateFeeNoRadio" GroupName="LateFeeGroup" Content="Không" IsChecked="True" Checked="OnSelectionChanged"/>
                        </StackPanel>
                        <TextBox x:Name="LateFeeCostTextBox"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Margin="0,8,0,0"
                                 IsEnabled="{Binding IsChecked, ElementName=LateFeeYesRadio}"
                                 Text="100000"/>

                        <TextBlock Text="Chi phí bảo trì" Style="{StaticResource LabelStyle}" FontWeight="Bold" Margin="0,24,0,0"/>
                        <TextBlock Text="{Binding MaintenanceDescPreview}" 
                                   FontSize="11" FontStyle="Italic" Foreground="Gray" 
                                   TextWrapping="Wrap" Margin="0,4,0,4"/>

                        <TextBox x:Name="MaintenanceCostTextBox"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Margin="0,0,0,0"
                                 IsReadOnly="True"
                                 Background="#FFF0F0F0"
                                 FontWeight="Bold"
                                 Text="{Binding MaintenanceFeePreview, StringFormat={}{0:N0}}"/>

                        <Separator Margin="0,32,0,16"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tổng: " Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                            <TextBlock x:Name="TotalText" Text="0 VND" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Nút Lưu -->
                <Button Grid.Row="1" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom"
                        Margin="0,20,20,20"
                        Width="100" Height="36"
                        Click="SaveButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFB27D"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="18" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Lưu"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>