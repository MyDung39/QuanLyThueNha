<UserControl x:Class="RoomManagementSystem.Presentation.Views.Page.ServiceManagement.ServiceElectricView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignWidth="1017" d:DesignHeight="752"
             FontFamily="Roboto"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Style cho các nhãn (TextBlock) -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Style cho các ô nhập liệu (TextBox) -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="#F2F6FA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="materialDesign:TextFieldAssist.DecorationVisibility" Value="Hidden"/>
            <Setter Property="materialDesign:TextFieldAssist.TextBoxViewMargin" Value="1,2,1,2"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <!-- Container chính màu trắng với bo góc -->
        <Border Background="White" CornerRadius="10" Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <!-- Vùng nội dung -->
                    <RowDefinition Height="Auto"/>
                    <!-- Vùng nút Lưu -->
                </Grid.RowDefinitions>

                <!-- Vùng nội dung chính (các ô nhập liệu và tóm tắt) -->
                <StackPanel Grid.Row="0" Margin="20">
                    <!-- Chỉ số điện cũ -->
                    <TextBlock Text="Chỉ số điện cũ" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="OldIndexTextBox" 
                             Style="{StaticResource InputTextBoxStyle}" 
                             Margin="0,6,0,0" 
                             Text="12503" 
                             TextChanged="OldIndexTextBox_TextChanged"/>

                    <!-- Chỉ số điện mới -->
                    <TextBlock Text="Chỉ số điện mới" Style="{StaticResource LabelStyle}" Margin="0,24,0,0"/>
                    <TextBox x:Name="NewIndexTextBox" 
                             Style="{StaticResource InputTextBoxStyle}"
                             Margin="0,6,0,0"
                             materialDesign:HintAssist.Hint="Vui lòng nhập chỉ số điện mới"/>

                    <!-- Đơn giá -->
                    <TextBlock Text="Đơn giá cho mỗi kWh" Style="{StaticResource LabelStyle}" Margin="0,24,0,0"/>
                    <TextBox x:Name="UnitPriceTextBox" 
                             Style="{StaticResource InputTextBoxStyle}"
                             Margin="0,6,0,0" 
                             Text="4000"/>

                    <!-- Tóm tắt -->
                    <StackPanel Margin="0,32,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Mức tiêu thụ: " Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="ConsumptionText" Text="104 kWh" Style="{StaticResource LabelStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Tổng số tiền: " Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="TotalText" Text="416 000 VND" Style="{StaticResource LabelStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Nút Lưu -->
                <Button Grid.Row="1" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom"
                        Margin="0,20,20,20"
                        Width="100" Height="36"
                        Click="SaveButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFB27D"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="18" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Lưu"/>
                        <!-- Biểu tượng Lưu -->
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>