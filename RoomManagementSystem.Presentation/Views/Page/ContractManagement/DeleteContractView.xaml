<UserControl x:Class="RoomManagementSystem.Presentation.Views.Page.ContractManagement.DeleteContractView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="203" d:DesignWidth="476"
             FontFamily="Roboto">

    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" 
                          Color="Black" 
                          Direction="315" 
                          ShadowDepth="1" 
                          BlurRadius="5.4" 
                          Opacity="0.14"/>

        <Style x:Key="ConfirmButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#E00000"/>
            <Setter Property="Background" Value="#0FE00000"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Roboto"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <!-- Thêm Cursor Hand -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- Sửa lại: Dùng TemplateBinding để Style linh hoạt hơn -->
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Lớp phủ này sẽ bị che bởi Border ở View cha, nhưng vẫn giữ lại theo code gốc của bạn -->
        <Rectangle Fill="#80000000"/>

        <!-- Modal -->
        <Border Background="White" 
                CornerRadius="14" 
                Width="465" 
                Height="192"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource DropShadowEffect}"
                Padding="24,22,24,18">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title and Close -->
                <Grid Grid.Row="0">
                    <TextBlock Text="Xóa phòng hợp đồng" 
                               FontSize="20" 
                               Foreground="#8A8A8A" 
                               VerticalAlignment="Center"/>

                    <!-- ✅ THAY CLICK BẰNG COMMAND -->
                    <Button Command="{Binding CancelDeleteContractCommand}"
                            Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top"
                            Margin="0,-10,-10,0" Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Path Data="M 0,0 L 12,12 M 0,12 L 12,0" StrokeThickness="1.5">
                            <Path.Stroke>
                                <SolidColorBrush Color="#565656" Opacity="0.34"/>
                            </Path.Stroke>
                        </Path>
                    </Button>
                </Grid>

                <!-- Warning -->
                <Grid Grid.Row="1">
                    <TextBlock FontSize="14" Foreground="#6F6F6F" TextWrapping="Wrap"
                               TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Run Text="⚠️"/>
                        <Run Text="  Xóa hợp đồng này sẽ xóa vĩnh viễn toàn bộ dữ liệu liên quan"/>
                        <LineBreak/>
                        <Run Text="Hành động này không thể hoàn tác"/>
                    </TextBlock>
                </Grid>

                <!-- Confirm button -->
                <!-- ✅ THAY CLICK BẰNG COMMAND -->
                <Button Grid.Row="2"
                        Content="Xác nhận" 
                        Width="88" Height="37"
                        HorizontalAlignment="Right"
                        Style="{StaticResource ConfirmButtonStyle}"
                        Command="{Binding ConfirmDeleteContractCommand}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>