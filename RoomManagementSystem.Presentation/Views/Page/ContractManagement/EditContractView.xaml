<UserControl x:Class="RoomManagementSystem.Presentation.Views.Page.ContractManagement.EditContractView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="624" d:DesignWidth="877"
             FontFamily="Roboto"
             Background="White">

    <!-- ✅ THÊM LẠI KHỐI RESOURCES BỊ THIẾU -->
    <UserControl.Resources>
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        <Style x:Key="SecondaryText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#586A84"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="84"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#FFB27D"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- DataContext của Grid này được gán vào đối tượng "EditingContract" trong ViewModel cha -->
    <Grid DataContext="{Binding EditingContract}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Người thuê (Vô hiệu hóa, chỉ hiển thị) -->
        <StackPanel Grid.Row="0" Margin="24,16,24,0">
            <TextBlock Text="Người thuê" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
            <Border Background="#E9ECEF" CornerRadius="8" Height="40" ToolTip="Không thể thay đổi người thuê trên hợp đồng đã có.">
                <TextBlock Text="{Binding DataContext.SelectedContract.TenantName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Style="{StaticResource LabelText}" VerticalAlignment="Center" Margin="14,0" Opacity="0.7"/>
            </Border>
        </StackPanel>

        <!-- Phòng (Vô hiệu hóa, chỉ hiển thị) -->
        <StackPanel Grid.Row="2" Margin="24,16,24,0">
            <TextBlock Text="Phòng" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
            <Border Background="#E9ECEF" CornerRadius="8" Height="40" ToolTip="Không thể thay đổi phòng trên hợp đồng đã có.">
                <TextBlock Text="{Binding MaPhong}"
                           Style="{StaticResource LabelText}" VerticalAlignment="Center" Margin="14,0" Opacity="0.7"/>
            </Border>
        </StackPanel>

        <!-- Tiền cọc -->
        <StackPanel Grid.Row="4" Margin="24,16,24,0">
            <TextBlock Text="Tiền cọc" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
            <Border Background="#F2F6FA" CornerRadius="8" Height="40">
                <TextBox Text="{Binding TienCoc, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" Background="Transparent" BorderThickness="0" Padding="14,0" VerticalContentAlignment="Center"/>
            </Border>
        </StackPanel>

        <!-- Ghi chú -->
        <StackPanel Grid.Row="6" Margin="24,16,24,0">
            <TextBlock Text="Ghi chú" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
            <Border Background="#F2F6FA" CornerRadius="8" MinHeight="120">
                <TextBox Text="{Binding GhiChu, UpdateSourceTrigger=PropertyChanged}" Background="Transparent" BorderThickness="0" Padding="14" TextWrapping="Wrap" AcceptsReturn="True"/>
            </Border>
        </StackPanel>

        <!-- Ngày bắt đầu & Thời hạn -->
        <Grid Grid.Row="7" Margin="24,0,24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,24,0,0">
                <TextBlock Text="Ngày bắt đầu" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
                <Border Background="#F2F6FA" CornerRadius="8" Height="40">
                    <DatePicker SelectedDate="{Binding NgayBatDau, Mode=TwoWay}" Background="Transparent" BorderThickness="0" Padding="14,0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="0,24,0,0">
                <TextBlock Text="Thời hạn (tháng)" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
                <Border Background="#F2F6FA" CornerRadius="8" Height="40">
                    <TextBox Text="{Binding ThoiHan, UpdateSourceTrigger=PropertyChanged}" Background="Transparent" BorderThickness="0" Padding="14,0" VerticalContentAlignment="Center"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Gửi thông báo -->
        <StackPanel Grid.Row="8" Margin="24,16,24,16">
            <TextBlock Text="Gửi thông báo" Style="{StaticResource LabelText}"/>
            <TextBlock Text="Gửi thông báo chỉnh sửa này đến cho người thuê" Style="{StaticResource SecondaryText}" Margin="0,6,0,8"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <CheckBox Content="Có" Foreground="#3B4758" FontSize="14"/>
                <CheckBox Content="Không" IsChecked="True" Foreground="#3B4758" FontSize="14" Margin="24,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Nút Lưu -->
        <Grid Grid.Row="8" Margin="24,12,24,16">
            <Button Command="{Binding DataContext.SaveContractChangesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Content="Lưu" Style="{StaticResource SaveButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</UserControl>