<UserControl x:Class="RoomManagementSystem.Presentation.Views.Page.ContractManagement.EditContractView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="624" d:DesignWidth="877"
             FontFamily="Roboto"
             Background="White">

    <UserControl.Resources>
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        <Style x:Key="FlatComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="Transparent" Grid.ColumnSpan="2"/>
                            <ContentPresenter Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>
                            <ToggleButton Grid.Column="1"
                                          IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                          Focusable="False"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Margin="0,0,14,0">
                                <Path Data="M 0 0 L 3 3 L 6 0" Stroke="#3B4758" StrokeThickness="1.2" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform"/>
                            </ToggleButton>
                            <Popup x:Name="Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   Focusable="False">
                                <Border Background="White" BorderBrush="#E0E6EE" BorderThickness="1" MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="InputBox" TargetType="Control">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Background" Value="#F2F6FA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="SecondaryText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#586A84"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="84"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#FFB27D"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Người thuê -->
        <StackPanel Grid.Row="0" Margin="24,16,24,0">
            <TextBlock Text="Người thuê" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
            <Border Background="#F2F6FA" CornerRadius="8" Height="40">
                <ComboBox x:Name="TenantComboBox" Style="{StaticResource FlatComboBox}" Background="Transparent" BorderThickness="0" Padding="14,0" VerticalContentAlignment="Center" SelectionChanged="TenantComboBox_SelectionChanged">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBoxItem>Lê Công Bảo</ComboBoxItem>
                    <ComboBoxItem>Nguyễn Văn A</ComboBoxItem>
                    <ComboBoxItem>Trần Thanh Nhã</ComboBoxItem>
                </ComboBox>
            </Border>
        </StackPanel>

        <!-- Phòng -->
        <StackPanel Grid.Row="2" Margin="24,16,24,0">
            <TextBlock Text="Phòng" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
            <Border Background="#F2F6FA" CornerRadius="8" Height="40">
                <ComboBox x:Name="RoomComboBox" Style="{StaticResource FlatComboBox}" Background="Transparent" BorderThickness="0" Padding="14,0" VerticalContentAlignment="Center">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBoxItem>APPLE-001</ComboBoxItem>
                    <ComboBoxItem>APPLE-002</ComboBoxItem>
                    <ComboBoxItem>ORANGE-101</ComboBoxItem>
                </ComboBox>
            </Border>
        </StackPanel>

        <!-- Tiền cọc -->
        <StackPanel Grid.Row="4" Margin="24,16,24,0">
            <TextBlock Text="Tiền cọc" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
            <Border Background="#F2F6FA" CornerRadius="8" Height="40">
                <TextBox x:Name="DepositTextBox" Background="Transparent" BorderThickness="0" Padding="14,0" VerticalContentAlignment="Center" Text="2000000"/>
            </Border>
        </StackPanel>

        <!-- Ghi chú -->
        <StackPanel Grid.Row="6" Margin="24,16,24,0">
            <TextBlock Text="Ghi chú" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
            <Border Background="#F2F6FA" CornerRadius="8" MinHeight="120">
                <TextBox x:Name="NoteTextBox" Background="Transparent" BorderThickness="0" Padding="14" 
                         TextWrapping="Wrap" AcceptsReturn="True"
                         Text="Lê Công Bảo cần tiền cọc, do thời gian nhập học gấp rút, chưa chạy được chi phí nên tạm chấp nhận khoản cọc này"/>
            </Border>
        </StackPanel>

        <!-- Ngày bắt đầu / kết thúc -->
        <Grid Grid.Row="7" Margin="24,0,24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,24,0,0">
                <TextBlock Text="Ngày bắt đầu" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
                <Border Background="#F2F6FA" CornerRadius="8" Height="40" ClipToBounds="True">
                    <DatePicker x:Name="StartDatePicker" Background="Transparent" BorderThickness="0" Padding="14,0"
                                VerticalAlignment="Center" VerticalContentAlignment="Center"
                                SelectedDate="{x:Static sys:DateTime.Today}"/>
                </Border>
            </StackPanel>
            
            <!-- Ngày kết thúc -->
            <StackPanel Grid.Column="2" Margin="12,22,0,0">
                <TextBlock Text="Ngày kết thúc" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
                <Border Background="#F2F6FA" CornerRadius="8" Height="40" ClipToBounds="True">
                    <DatePicker x:Name="EndDatePicker" Background="Transparent" BorderThickness="0" Padding="14,0"
                                VerticalAlignment="Center" VerticalContentAlignment="Center"
                                SelectedDate="{x:Static sys:DateTime.Today}"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Gửi thông báo -->
        <StackPanel Grid.Row="8" Margin="24,16,24,16">
            <TextBlock Text="Gửi thông báo" Style="{StaticResource LabelText}"/>
            <TextBlock Text="Gửi thông báo chỉnh sửa này đến cho người thuê" Style="{StaticResource SecondaryText}" Margin="0,6,0,8"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <CheckBox Content="Có" Foreground="#3B4758" FontSize="14"/>
                <CheckBox Content="Không" Foreground="#3B4758" FontSize="14" Margin="24,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Nút Lưu -->
        <Grid Grid.Row="8" Margin="24,12,24,16">
            <Button Content="Lưu" Style="{StaticResource SaveButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</UserControl>
