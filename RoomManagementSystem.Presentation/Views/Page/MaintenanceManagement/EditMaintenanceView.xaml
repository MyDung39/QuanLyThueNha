<UserControl x:Class="RoomManagementSystem.Presentation.Views.Page.MaintenanceManagement.EditMaintenanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:RoomManagementSystem.Presentation.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:MaintenanceManagementViewModel}"
             d:DesignHeight="425" d:DesignWidth="535"
             FontFamily="Roboto">

    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" Color="Black" Direction="315" ShadowDepth="1" BlurRadius="5.4" Opacity="0.14"/>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#6C5FF7"/>
            <!-- Thay đổi màu để nổi bật -->
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="White" CornerRadius="14" Width="524" Height="auto" Padding="45,30,45,30" Effect="{StaticResource DropShadowEffect}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Hàng 1: Tiêu đề và nút Đóng -->
            <Grid Grid.Row="0">
                <TextBlock Text="Chỉnh sửa thông tin bảo trì và sự cố" FontSize="20" Foreground="#8A8A8A" VerticalAlignment="Center"/>
                <!-- ✅ SỬA LẠI: DÙNG COMMAND -->
                <Button Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-20,-35,0"
                        Background="Transparent" BorderThickness="0" Cursor="Hand" 
                        Command="{Binding CancelEditCommand}">
                    <Path Data="M 0,0 L 12,12 M 0,12 L 12,0" StrokeThickness="1.5" Stroke="#8A8A8A"/>
                </Button>
            </Grid>

            <!-- Hàng 3: Form nhập liệu -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- === CỘT TRÁI === -->

                <!-- Phòng (Chỉ đọc) -->
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="Phòng" FontSize="13" Foreground="#292D32" Margin="0,0,0,4"/>
                    <Border Background="#F0F0F0" CornerRadius="9.5" Height="36" BorderBrush="#E0E0E0" BorderThickness="1">
                        <!-- ✅ SỬA LẠI: BINDING ĐỂ HIỂN THỊ -->
                        <TextBlock Text="{Binding SelectedItemForEdit.Phong}" Padding="12,0" VerticalAlignment="Center" Foreground="#555"/>
                    </Border>
                </StackPanel>

                <!-- Mô tả -->
                <StackPanel Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="Mô tả" FontSize="13" Foreground="#292D32" Margin="0,0,0,4"/>
                    <Border Background="#F9FBFF" CornerRadius="9.5" Height="36" BorderBrush="#F0EEEE" BorderThickness="1">
                        <!-- ✅ SỬA LẠI: BINDING ĐỂ SỬA -->
                        <TextBox Text="{Binding EditDescription, UpdateSourceTrigger=PropertyChanged}" Background="Transparent" BorderThickness="0" Padding="12,0" VerticalContentAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Tình trạng -->
                <StackPanel Grid.Row="4" Grid.Column="0">
                    <TextBlock Text="Tình trạng" FontSize="13" Foreground="#292D32" Margin="0,0,0,4"/>
                    <Border Background="#F9FBFF" CornerRadius="9.5" Height="36" BorderBrush="#F0EEEE" BorderThickness="1">
                        <!-- ✅ SỬA LẠI: BINDING ĐỂ SỬA -->
                        <ComboBox ItemsSource="{Binding StatusOptions}" 
                                  SelectedItem="{Binding EditStatus}"
                                  Background="Transparent" BorderThickness="0" Padding="12,0" VerticalContentAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Ngày hoàn thành -->
                <StackPanel Grid.Row="6" Grid.Column="0">
                    <TextBlock Text="Ngày hoàn thành" FontSize="13" Foreground="#292D32" Margin="0,0,0,4"/>
                    <Border Background="#F9FBFF" CornerRadius="9.5" Height="36" BorderBrush="#F0EEEE" BorderThickness="1">
                        <!-- ✅ SỬA LẠI: BINDING ĐỂ SỬA -->
                        <DatePicker SelectedDate="{Binding EditCompletionDate}" Background="Transparent" BorderThickness="0" Padding="12,0,5,0" VerticalContentAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- === CỘT PHẢI === -->

                <!-- Người thuê (Chỉ đọc) -->
                <StackPanel Grid.Row="0" Grid.Column="2">
                    <TextBlock Text="Người thuê" FontSize="13" Foreground="#292D32" Margin="0,0,0,4"/>
                    <Border Background="#F0F0F0" CornerRadius="9.5" Height="36" BorderBrush="#E0E0E0" BorderThickness="1">
                        <!-- ✅ SỬA LẠI: BINDING ĐỂ HIỂN THỊ -->
                        <TextBlock Text="{Binding SelectedItemForEdit.NguoiThue}" Padding="12,0" VerticalAlignment="Center" Foreground="#555"/>
                    </Border>
                </StackPanel>

                <!-- Ngày yêu cầu -->
                <StackPanel Grid.Row="2" Grid.Column="2">
                    <TextBlock Text="Ngày yêu cầu" FontSize="13" Foreground="#292D32" Margin="0,0,0,4"/>
                    <Border Background="#F9FBFF" CornerRadius="9.5" Height="36" BorderBrush="#F0EEEE" BorderThickness="1">
                        <!-- ✅ SỬA LẠI: BINDING ĐỂ SỬA -->
                        <DatePicker SelectedDate="{Binding EditRequestDate}" Background="Transparent" BorderThickness="0" Padding="12,0,5,0" VerticalContentAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Chi phí sửa chữa -->
                <StackPanel Grid.Row="4" Grid.Column="2">
                    <TextBlock Text="Chi phí sửa chữa" FontSize="13" Foreground="#292D32" Margin="0,0,0,4"/>
                    <Border Background="#F9FBFF" CornerRadius="9.5" Height="36" BorderBrush="#F0EEEE" BorderThickness="1">
                        <!-- ✅ SỬA LẠI: BINDING ĐỂ SỬA -->
                        <TextBox Text="{Binding EditCost, StringFormat=N0}" Background="Transparent" BorderThickness="0" Padding="12,0" VerticalContentAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Hàng 5: Nút xác nhận -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- ✅ SỬA LẠI: DÙNG COMMAND -->
                <Button Content="Lưu" Width="78" Height="37" Style="{StaticResource PrimaryButtonStyle}" 
                        Command="{Binding ConfirmEditCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>