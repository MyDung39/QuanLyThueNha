<UserControl x:Class="RoomManagementSystem.Presentation.Views.Page.MaintenanceManagement.MaintenanceManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RoomManagementSystem.Presentation.Views.Page.MaintenanceManagement"
             xmlns:vm="clr-namespace:RoomManagementSystem.Presentation.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:MaintenanceManagementViewModel}"
             Background="#F7F8FC"
             FontFamily="Roboto">

    
    
    <UserControl.DataContext>
        <vm:MaintenanceManagementViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <!-- ... (Toàn bộ các Style của bạn giữ nguyên ở đây) ... -->
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="37"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <Image Source="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}}" Width="16" Height="16" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F9F9F9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="PaginationButton">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#404B52"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinWidth" Value="22"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="3.5" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="MinHeight" Value="55"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridRow">
                        <Grid>
                            <Border x:Name="DGR_Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="True"/>
                            <SelectiveScrollingGrid>
                                <SelectiveScrollingGrid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </SelectiveScrollingGrid.ColumnDefinitions>
                                <SelectiveScrollingGrid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </SelectiveScrollingGrid.RowDefinitions>
                                <DataGridCellsPresenter Grid.Column="1" ItemsPanel="{TemplateBinding ItemsPanel}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </SelectiveScrollingGrid>
                            <Line X1="15" X2="9999" Stroke="#EEEEEE" StrokeThickness="1" VerticalAlignment="Bottom"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="DGR_Border" Property="Background" Value="#FAFAFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10, 5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- LỚP NỘI DUNG CHÍNH -->
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Dòng 1: Tiêu đề -->
                <RowDefinition Height="Auto"/>
                <!-- Dòng 2: Thanh công cụ -->
                <RowDefinition Height="*"/>
                <!-- Dòng 3: DataGrid -->
                <RowDefinition Height="Auto"/>
                <!-- Dòng 4: Phân trang -->
            </Grid.RowDefinitions>

            <!-- Dòng 1: Tiêu đề -->
            <TextBlock Grid.Row="0" Text="Quản lý bảo trì và sự cố" FontSize="24" FontWeight="Bold" Foreground="#1F384C" Margin="0,0,0,20"/>

            <!-- Dòng 2: Thanh công cụ -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Border Background="White" CornerRadius="10" BorderBrush="#EEEEEE" BorderThickness="1" Padding="10,8">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../../../Resources/Images/search_icon.png" Width="16" Height="16"/>
                            <TextBox Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}" Foreground="#B5B7C0" BorderThickness="0" Background="Transparent" VerticalAlignment="Center" Margin="10,0,0,0" Width="150" FontSize="12"/>
                        </StackPanel>
                    </Border>
                    <Button Name="SortButton" Margin="20,0,0,0" BorderThickness="0" Background="Transparent" Cursor="Hand">
                        <Border Background="White" CornerRadius="10" BorderBrush="#EEEEEE" BorderThickness="1" Padding="15,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Sắp xếp theo : " Foreground="#7E7E7E" VerticalAlignment="Center" FontSize="12"/>
                                <TextBlock Text="{Binding SelectedSortOption}" Foreground="#3D3C42" FontWeight="SemiBold" VerticalAlignment="Center" FontSize="12"/>
                                <Path Data="M 0 0 L 4.5 4.5 L 9 0" Stroke="#7E7E7E" StrokeThickness="1.5" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Mới nhất" Command="{Binding SortCommand}" CommandParameter="Mới nhất"/>
                                <MenuItem Header="Phòng" Command="{Binding SortCommand}" CommandParameter="Phòng"/>
                                <MenuItem Header="Ngày yêu cầu" Command="{Binding SortCommand}" CommandParameter="Ngày yêu cầu"/>
                                <MenuItem Header="Ngày hoàn thành" Command="{Binding SortCommand}" CommandParameter="Ngày hoàn thành"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource ActionButton}" Tag="../../../Resources/Images/edit_icon.png" Margin="0,0,10,0" Command="{Binding OpenEditPopupCommand}"/>
                    <Button Style="{StaticResource ActionButton}" Tag="../../../Resources/Images/delete_icon.png" Margin="0,0,10,0" Command="{Binding OpenDeletePopupCommand}"/>
                    <Button Style="{StaticResource ActionButton}" Tag="../../../Resources/Images/add_icon.png" Command="{Binding OpenAddPopupCommand}"/>
                </StackPanel>
            </Grid>

            <!-- Dòng 3: Bảng Dữ liệu (ĐÃ SỬA LỖI) -->
            <Border Grid.Row="2" Background="White" CornerRadius="15">
                <DataGrid ItemsSource="{Binding MaintenanceList}"
                          AutoGenerateColumns="False"
                          Background="Transparent"
                          BorderThickness="0"
                          HeadersVisibility="Column"
                          RowHeaderWidth="0"
                          CanUserAddRows="False"
                          GridLinesVisibility="None"
                          ColumnWidth="*"
                          HorizontalAlignment="Stretch"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#EEEEEE"/>
                            <Setter Property="Padding" Value="10,15"/>
                            <Setter Property="Foreground" Value="#B5B7C0"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="FontSize" Value="14"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <!-- Cột CheckBox không có IsReadOnly và có Mode=TwoWay để hoạt động -->
                        <DataGridTemplateColumn Width="50">
                            <DataGridTemplateColumn.Header>
                                <CheckBox IsChecked="{Binding DataContext.IsAllSelected, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>

                        </DataGridTemplateColumn>

                        <!-- Các cột Text được đặt IsReadOnly="True" để ngăn chỉnh sửa -->
                        <DataGridTextColumn Header="Phòng" Binding="{Binding Phong}" Width="1.5*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Người thuê" Binding="{Binding NguoiThue}" Width="1.5*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Mô tả" Binding="{Binding MoTa}" Width="2.5*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Ngày yêu cầu" Binding="{Binding NgayYeuCau, StringFormat='dd/MM/yyyy'}" Width="1.5*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Ngày hoàn thành" Binding="{Binding NgayHoanThanh, StringFormat='dd/MM/yyyy', TargetNullValue=''}" Width="1.5*" IsReadOnly="True"/>

                        <DataGridTemplateColumn Header="Tình trạng" Width="1.2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="11" Height="22" Padding="8,0" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="71">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding TrangThaiXuLy}" Value="Hoàn tất">
                                                        <Setter Property="BorderBrush" Value="#149D52"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding TrangThaiXuLy}" Value="Chưa xử lý">
                                                        <Setter Property="BorderBrush" Value="#EC5252"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding TrangThaiXuLy}" Value="Đang xử lý">
                                                        <Setter Property="BorderBrush" Value="Orange"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding TrangThaiXuLy}" FontSize="11" FontWeight="Medium" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TrangThaiXuLy}" Value="Hoàn tất">
                                                            <Setter Property="Foreground" Value="#149D52"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TrangThaiXuLy}" Value="Chưa xử lý">
                                                            <Setter Property="Foreground" Value="#EC5252"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TrangThaiXuLy}" Value="Đang xử lý">
                                                            <Setter Property="Foreground" Value="Orange"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Chi phí" Binding="{Binding ChiPhi, StringFormat=N0}" Width="1*" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Dòng 4: Phân trang -->
            <Grid Grid.Row="3" Margin="0,20,0,0">
                <TextBlock Text="{Binding PaginationInfoText}" VerticalAlignment="Center" Foreground="#B5B7C0" FontSize="14" FontWeight="Medium"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Style="{StaticResource PaginationButton}" Content="&lt;" Margin="0,0,12,0" Command="{Binding ChangePageCommand}" CommandParameter="Prev"/>
                    <Button Style="{StaticResource PaginationButton}" Content=">" Margin="0,0,0,0" Command="{Binding ChangePageCommand}" CommandParameter="Next"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- LỚP POPUP -->
        <Border Visibility="{Binding IsAddPopupVisible, Converter={StaticResource BoolToVisConverter}, FallbackValue=Collapsed}" Background="#80000000"/>
        <local:AddMaintenanceView Visibility="{Binding IsAddPopupVisible, Converter={StaticResource BoolToVisConverter}, FallbackValue=Collapsed}" DataContext="{Binding}"/>

        <Border Visibility="{Binding IsEditPopupVisible, Converter={StaticResource BoolToVisConverter}, FallbackValue=Collapsed}" Background="#80000000"/>
        <local:EditMaintenanceView Visibility="{Binding IsEditPopupVisible, Converter={StaticResource BoolToVisConverter}, FallbackValue=Collapsed}" DataContext="{Binding}"/>

        <Border Visibility="{Binding IsDeletePopupVisible, Converter={StaticResource BoolToVisConverter}, FallbackValue=Collapsed}" Background="#80000000"/>
        <local:DeleteMaintenanceView Visibility="{Binding IsDeletePopupVisible, Converter={StaticResource BoolToVisConverter}, FallbackValue=Collapsed}" DataContext="{Binding}"/>
    </Grid>
</UserControl>