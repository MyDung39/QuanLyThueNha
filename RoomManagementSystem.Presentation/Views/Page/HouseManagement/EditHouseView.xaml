<UserControl x:Class="RoomManagementSystem.Presentation.Views.Page.HouseManagement.EditHouseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="362" d:DesignWidth="535"
             FontFamily="Roboto">

    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" 
                          Color="Black" 
                          Direction="135" 
                          ShadowDepth="2.7" 
                          BlurRadius="5.4" 
                          Opacity="0.14"/>
    </UserControl.Resources>

    <Grid>
        <!-- Modal Overlay -->
        <Rectangle Fill="#80000000" />

        <!-- Modal Content -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Modal Background -->
            <Border Background="White" 
                    CornerRadius="14" 
                    Width="535" 
                    Height="362"
                    Effect="{StaticResource DropShadowEffect}">

                <Grid Margin="40,27,40,35">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto" MinHeight="113.603"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title and Close Button -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Chỉnh sửa thông tin nhà" 
                                   FontFamily="Roboto" 
                                   FontSize="20" 
                                   Foreground="#8A8A8A" 
                                   VerticalAlignment="Top" Margin="-3,16,3,0"/>

                        <Button x:Name="CloseButton" 
                                Width="30" 
                                Height="30" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top"
                                Margin="0,9,1,0"
                                Background="Transparent" 
                                BorderThickness="0" 
                                Cursor="Hand"
                                Click="CloseButton_Click">
                            <Path Data="M 0,0 L 12,12 M 0,12 L 12,0" 
                                  Stroke="#565656" 
                                  StrokeThickness="1.5"/>
                        </Button>
                    </Grid>

                    <!-- Address Input -->
                    <StackPanel Margin="0,60,0,20" Grid.RowSpan="2">
                        <TextBlock Text="Địa chỉ" 
                                   FontSize="13" 
                                   Foreground="#292D32" 
                                   Margin="0,0,0,10"/>

                        <Border Background="#F9FBFF" 
                                BorderBrush="#F0EEEE" 
                                BorderThickness="1" 
                                CornerRadius="9.5" 
                                Height="36">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="AddressTextBox" 
                                         Grid.Column="0"
                                         Background="Transparent" 
                                         BorderThickness="0" 
                                         Padding="15,0,10,0"
                                         VerticalContentAlignment="Center"
                                         FontSize="12"
                                         Foreground="#292D32"
                                         Text="123 đường Nguyễn Trãi, phường Thanh Xuân, Hà Nội"/>

                                <Button Grid.Column="1" 
                                        Width="23" 
                                        Height="23" 
                                        Margin="0,0,10,0"
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="MapButton_Click">
                                    <Image Source="../../../Resources/Images/map_icon.png" 
                                           Width="23" 
                                           Height="23"/>
                                </Button>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Notes Input -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,20">
                        <TextBlock Text="Ghi chú" 
                                   FontSize="13" 
                                   Foreground="#292D32" 
                                   Margin="0,0,0,10"/>

                        <Border Background="#F9FBFF" 
                                BorderBrush="#F0EEEE" 
                                BorderThickness="1" 
                                CornerRadius="9.5" 
                                Height="68">
                            <TextBox x:Name="NotesTextBox" 
                                     Background="Transparent" 
                                     BorderThickness="0" 
                                     Padding="15,10"
                                     FontSize="12"
                                     Foreground="#292D32"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Text="Dùng chung nhà bếp, có khu vực để xe" Height="66" VerticalAlignment="Top"/>
                        </Border>
                    </StackPanel>

                    <!-- Spacer -->
                    <Grid Grid.Row="2" Margin="0,113,0,0" Grid.RowSpan="2"/>

                    <!-- Save Button -->
                    <StackPanel Grid.Row="3" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Left" Margin="375,6,0,0" Width="80">
                        <Button x:Name="SaveButton" 
                                Content="Lưu" 
                                FontSize="14" 
                                FontWeight="Medium" 
                                Foreground="White" 
                                Background="#5A67BA"
                                Width="80" 
                                Padding="0,8" 
                                Click="SaveButton_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>

