<UserControl x:Class="RoomManagementSystem.Presentation.Views.Page.HouseManagement.HouseManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:RoomManagementSystem.Presentation.Views.Page.HouseManagement"
             mc:Ignorable="d" 
             FontFamily="Roboto"
             d:DesignHeight="779" d:DesignWidth="1293"
             Background="White">

    <UserControl.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F0EDFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="37"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <Image Source="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}}" 
                                   Width="20" Height="20"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#F0EDFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="37"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <Image Source="{Binding Tag, RelativeSource={RelativeSource AncestorType=ToggleButton}}" 
                                   Width="18" Height="18"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F0EDFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="35,0,10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" CornerRadius="10" Background="{TemplateBinding Background}">
                            <Grid>
                                <Image Source="../../../Resources/Images/search_icon.png" Width="18" Height="18" HorizontalAlignment="Left" Margin="10,0,0,0" Opacity="0.6"/>
                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" />
                                <TextBlock Text="Tìm kiếm" Foreground="#B5B7C0" IsHitTestVisible="False"
                                           VerticalAlignment="Center" Margin="{TemplateBinding Padding}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value=""/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HouseListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Height" Value="66"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="Transparent" CornerRadius="10" Margin="10,0">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F0EDFF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#5A67BA"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="1"/>
                                <Setter Property="FontWeight" Value="ExtraBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F5F4FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PaginationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="Foreground" Value="#404B52"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PaginationActiveButtonStyle" TargetType="Button" BasedOn="{StaticResource PaginationButtonStyle}">
            <Setter Property="Background" Value="#707FDD"/>
            <Setter Property="BorderBrush" Value="#5932EA"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="PaginationEllipsisStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Margin" Value="3,0"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid Margin="15,0,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Nhà" FontSize="18" FontWeight="Medium" Foreground="#1F384C" Margin="0,15,0,15"/>

                <Border Grid.Row="1" Grid.RowSpan="2" Background="#F0EDFF" Opacity="0.5" CornerRadius="15"/>
                <Grid Grid.Row="1" Margin="10,15" Height="37" VerticalAlignment="Top">
                    <TextBox x:Name="SearchTextBox" TextChanged="SearchTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource SearchBoxStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=SearchToggleButton}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <StackPanel x:Name="ActionButtonsPanel" Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=SearchToggleButton}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <ToggleButton x:Name="SearchToggleButton" Style="{StaticResource SearchToggleButtonStyle}" Tag="../../../Resources/Images/search_icon.png"/>
                        <Button x:Name="EditHouseButton" Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/edit_icon.png" Margin="22,0,0,0" Click="EditHouseButton_Click"/>
                        <Button x:Name="DeleteHouseButton" Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/delete_icon.png" Margin="21,0,0,0" Click="DeleteHouseButton_Click"/>
                        <Button x:Name="AddHouseButton" Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/add_icon.png" Margin="21,0,0,0" Click="AddHouseButton_Click"/>
                    </StackPanel>
                </Grid>

                <ListBox x:Name="HouseListBox" Grid.Row="2" BorderThickness="0" Background="Transparent" 
                         ItemContainerStyle="{StaticResource HouseListItemStyle}"
                         Margin="0,10,0,0">
                </ListBox>
            </Grid>

            <Grid Grid.Column="2" Margin="0,15,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Phòng" FontSize="18" FontWeight="Medium" Foreground="#1F384C" Margin="0,0,0,15"/>

                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#F0EDFF" Opacity="0.5" CornerRadius="15" Padding="20" MinHeight="110">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="../../../Resources/Images/location_icon.png" Width="38" Height="38" Margin="0,0,0,10"/>
                            <TextBlock Text="123 đường Nguyễn Trãi,&#10;phường Thanh Xuân, Hà Nội" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="#F0EDFF" Opacity="0.5" CornerRadius="15" Padding="20" MinHeight="110">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="../../../Resources/Images/total_rooms_icon.png" Width="38" Height="38" Margin="0,0,0,10"/>
                            <TextBlock Text="50 phòng" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="4" Background="#F0EDFF" Opacity="0.5" CornerRadius="15" Padding="20" MinHeight="110">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="../../../Resources/Images/amenities_icon.png" Width="38" Height="38" Margin="0,0,0,10"/>
                            <TextBlock Text="Dùng chung nhà bếp,&#10;có chỗ để xe" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid Grid.Row="2" Margin="0,20,0,15">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBox x:Name="RoomsSearchTextBox" Style="{StaticResource SearchBoxStyle}" Width="216" Height="37" TextChanged="RoomsSearchTextBox_TextChanged"/>

                        <Button Name="RoomsSortButton" Margin="20,0,0,0" BorderThickness="0" Background="Transparent" Cursor="Hand" Click="RoomsSortButton_Click">
                            <Border Background="#F0EDFF" CornerRadius="10" Padding="15,0">
                                <Grid Height="37" Width="171">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Sắp xếp theo: " VerticalAlignment="Center" Foreground="#7E7E7E"/>
                                    <TextBlock x:Name="RoomsSortButtonText" Text="Mới nhất" VerticalAlignment="Center" FontWeight="Bold" Foreground="Black" Grid.ColumnSpan="2" Margin="2,0,22,0" Grid.Column="1"/>
                                    <Path Grid.Column="2" Data="M0,0 L4.5,4.3 L9,0" Stroke="#3D3C42" StrokeThickness="1.5"
                                          HorizontalAlignment="Left" VerticalAlignment="Center" Margin="76,0,0,0" RenderTransformOrigin="2.113,0.685"/>
                                </Grid>
                            </Border>
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Mới nhất" Click="RoomsSortMenuItem_Click"/>
                                    <MenuItem Header="Số phòng" Click="RoomsSortMenuItem_Click"/>
                                    <MenuItem Header="Diện tích" Click="RoomsSortMenuItem_Click"/>
                                    <MenuItem Header="Chi phí" Click="RoomsSortMenuItem_Click"/>
                                    <MenuItem Header="Ngày bảo trì" Click="RoomsSortMenuItem_Click"/>
                                    <MenuItem Header="Ngày có sẵn" Click="RoomsSortMenuItem_Click"/>
                                    <MenuItem Header="Trạng thái" Click="RoomsSortMenuItem_Click"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="EditRoomButton" Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/edit_icon.png" Margin="0,0,10,0" Click="EditRoomButton_Click"/>
                        <Button x:Name="DeleteRoomButton" Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/delete_icon.png" Margin="0,0,10,0" Click="DeleteRoomButton_Click"/>
                        <Button x:Name="AddRoomButton" Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/add_icon.png" Click="AddRoomButton_Click"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="3" Background="White" CornerRadius="15" Padding="20">
                    <StackPanel>
                        <Grid Margin="10,0,10,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="RoomsSelectAllCheckBox" Grid.Column="0" VerticalAlignment="Center" Checked="RoomsSelectAll_Checked" Unchecked="RoomsSelectAll_Unchecked"/>
                            <TextBlock Grid.Column="1" Text="Số phòng" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Grid.Column="2" Text="Diện tích" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Grid.Column="3" Text="Chi phí theo tháng" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Grid.Column="4" Text="Ngày bảo trì" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Grid.Column="5" Text="Ngày có sẵn" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Grid.Column="6" Text="Trạng thái" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                        </Grid>

                        <StackPanel x:Name="RoomListDataPanel"/>
                    </StackPanel>
                </Border>

                <Grid Grid.Row="4" Margin="0,20,10,0">
                    <TextBlock x:Name="RoomsPaginationInfoText" VerticalAlignment="Center" Foreground="#B5B7C0" FontSize="14" FontWeight="Medium"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button x:Name="RoomsPrevPageButton" Style="{StaticResource PaginationButtonStyle}" Content="&lt;" Margin="0,0,12,0" Click="RoomsPrevPageButton_Click"/>
                        <StackPanel x:Name="RoomsPageButtonsPanel" Orientation="Horizontal"/>
                        <Button x:Name="RoomsNextPageButton" Style="{StaticResource PaginationButtonStyle}" Content=">" Margin="0,0,0,0" Click="RoomsNextPageButton_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <Border x:Name="ClickAwayBorder" Background="Transparent" MouseDown="ClickAwayBorder_MouseDown">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsChecked, ElementName=SearchToggleButton}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>

        <!-- Dialog Views -->
        <views:AddHouseView x:Name="AddHouseDialog" Visibility="Collapsed" 
                            HouseAdded="AddHouseDialog_HouseAdded" 
                            Canceled="AddHouseDialog_Canceled"/>
        <views:EditHouseView x:Name="EditHouseDialog" Visibility="Collapsed" 
                             HouseUpdated="EditHouseDialog_HouseUpdated" 
                             Canceled="EditHouseDialog_Canceled"/>
        <views:DeleteHouseView x:Name="DeleteHouseDialog" Visibility="Collapsed" 
                               ConfirmDelete="DeleteHouseDialog_ConfirmDelete" 
                               Canceled="DeleteHouseDialog_Canceled"/>
        
        <!-- Room Dialogs -->
        <views:AddRoomView x:Name="AddRoomDialog" Visibility="Collapsed" 
                           RoomAdded="AddRoomDialog_RoomAdded"
                           Canceled="AddRoomDialog_Canceled"/>
        <views:EditRoomView x:Name="EditRoomDialog" Visibility="Collapsed" 
                            RoomUpdated="EditRoomDialog_RoomUpdated"
                            Canceled="EditRoomDialog_Canceled"/>
        <views:DeleteRoomView x:Name="DeleteRoomDialog" Visibility="Collapsed" 
                              ConfirmDelete="DeleteRoomDialog_ConfirmDelete" 
                              Canceled="DeleteRoomDialog_Canceled"/>
    </Grid>
</UserControl>