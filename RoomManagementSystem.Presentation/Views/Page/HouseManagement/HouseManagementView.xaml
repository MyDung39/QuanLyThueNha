<UserControl x:Class="RoomManagementSystem.Presentation.Views.Page.HouseManagement.HouseManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:RoomManagementSystem.Presentation.Views.Page.HouseManagement"
             xmlns:vm="clr-namespace:RoomManagementSystem.Presentation.ViewModels"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             FontFamily="Roboto"
             d:DataContext="{d:DesignInstance Type=vm:HouseManagementViewModel}"
             Background="White">

    <UserControl.Resources>
        <!-- ... Các Style của bạn giữ nguyên ... -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F0EDFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="37"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <Image Source="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}}" Width="20" Height="20"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="HouseListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Height" Value="66"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="Transparent" CornerRadius="10" Margin="10,0">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F0EDFF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#5A67BA"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="1"/>
                                <Setter Property="FontWeight" Value="ExtraBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F5F4FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid Margin="15,0,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Cột bên trái (Danh sách nhà) giữ nguyên -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Nhà" FontSize="18" FontWeight="Medium" Foreground="#1F384C" Margin="0,15,0,15"/>
                <Border Grid.Row="1" Grid.RowSpan="2" Background="#F0EDFF" Opacity="0.5" CornerRadius="15"/>
                <Grid Grid.Row="1" Margin="10,15" Height="37" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/edit_icon.png" Margin="22,0,0,0" Command="{Binding EditHouseCommand}"/>
                        <Button Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/delete_icon.png" Margin="21,0,0,0" Command="{Binding DeleteHouseCommand}"/>
                        <Button Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/add_icon.png" Margin="21,0,0,0" Command="{Binding AddHouseCommand}"/>
                    </StackPanel>
                </Grid>
                <ListBox Grid.Row="2" ItemsSource="{Binding DanhSachNha}" SelectedItem="{Binding SelectedNha, Mode=TwoWay}" BorderThickness="0" Background="Transparent" ItemContainerStyle="{StaticResource HouseListItemStyle}" Margin="0,10,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding MaNha}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- Cột bên phải (Thông tin và danh sách phòng) -->
            <Grid Grid.Column="2" Margin="0,15,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Phòng" FontSize="18" FontWeight="Medium" Foreground="#1F384C" Margin="0,0,0,15"/>
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#F0EDFF" Opacity="0.5" CornerRadius="15" Padding="20" MinHeight="110">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="../../../Resources/Images/location_icon.png" Width="38" Height="38" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding SelectedNha.DiaChi}" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Background="#F0EDFF" Opacity="0.5" CornerRadius="15" Padding="20" MinHeight="110">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="../../../Resources/Images/total_rooms_icon.png" Width="38" Height="38" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding SelectedNha.TongSoPhong, StringFormat='{}{0} phòng'}" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="4" Background="#F0EDFF" Opacity="0.5" CornerRadius="15" Padding="20" MinHeight="110">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="../../../Resources/Images/amenities_icon.png" Width="38" Height="38" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding SelectedNha.GhiChu}" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
                <Grid Grid.Row="2" Margin="0,20,0,15">
                    <!-- ... Các nút tìm kiếm, sắp xếp giữ nguyên ... -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/edit_icon.png" Margin="0,0,10,0" Command="{Binding EditRoomCommand}"/>
                        <!-- ✅ THAY ĐỔI: Nút xóa phòng gọi đúng Command -->
                        <Button Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/delete_icon.png" Margin="0,0,10,0" Command="{Binding DeleteRoomCommand}"/>
                        <Button Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/add_icon.png" Command="{Binding AddRoomCommand}"/>
                    </StackPanel>
                </Grid>

                <!-- ✅ THAY ĐỔI: Toàn bộ khu vực danh sách phòng được cập nhật -->
                <Border Grid.Row="3" Background="White" CornerRadius="15" Padding="20">
                    <StackPanel>
                        <!-- Grid Header -->
                        <Grid Margin="10,0,10,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <!-- CHECKBOX CHỌN TẤT CẢ -->
                            <CheckBox Grid.Column="0" VerticalAlignment="Center" IsChecked="{Binding IsAllSelected, Mode=TwoWay}"/>
                            <TextBlock Grid.Column="1" Text="Số phòng" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Grid.Column="2" Text="Diện tích" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Grid.Column="3" Text="Chi phí theo tháng" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Grid.Column="4" Text="Ngày bảo trì" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Grid.Column="5" Text="Ngày có sẵn" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Grid.Column="6" Text="Trạng thái" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                        </Grid>
                        <!-- SỬ DỤNG ITEMSCONTROL ĐỂ HIỂN THỊ DANH SÁCH -->
                        <ItemsControl ItemsSource="{Binding DanhSachPhongHienThi}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#EEEEEE" BorderThickness="0,1,0,0" Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>
                                            <CheckBox Grid.Column="0" VerticalAlignment="Center" IsChecked="{Binding IsSelected, Mode=TwoWay}">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Click">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.UpdateSelectionStateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </CheckBox>
                                            <TextBlock Grid.Column="1" Text="{Binding Phong.MaPhong}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Phong.DienTich, StringFormat='{}{0:0.0} m²'}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="{Binding Phong.GiaThue, StringFormat='{}{0:n0} đ'}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="4" Text="{Binding Phong.NgayBaoTriHienTai, StringFormat='dd/MM/yyyy'}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="5" Text="{Binding Phong.NgayCoSan, StringFormat='dd/MM/yyyy'}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="6" Text="{Binding Phong.TrangThai}" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Phần Popup giữ nguyên, nhưng popup xóa phòng bây giờ sẽ được điều khiển bởi IsDeleteRoomPopupVisible -->
        <Border Background="#80000000" Visibility="{Binding IsAddHousePopupVisible, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}"/>
        <Border Background="#80000000" Visibility="{Binding IsEditHousePopupVisible, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}"/>
        <Border Background="#80000000" Visibility="{Binding IsDeleteHousePopupVisible, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}"/>
        <Border Background="#80000000" Visibility="{Binding IsAddRoomPopupVisible, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}"/>
        <Border Background="#80000000" Visibility="{Binding IsEditRoomPopupVisible, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}"/>

        <!-- ✅ THAY ĐỔI: Visibility của popup xóa phòng -->
        <Border Background="#80000000" Visibility="{Binding IsDeleteRoomPopupVisible, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}"/>

        <!-- ... Các popup khác giữ nguyên -->
        <views:AddHouseView Visibility="{Binding IsAddHousePopupVisible, Converter={StaticResource BoolToVis}}" DataContext="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <views:EditHouseView Visibility="{Binding IsEditHousePopupVisible, Converter={StaticResource BoolToVis}}" DataContext="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <views:DeleteHouseView Visibility="{Binding IsDeleteHousePopupVisible, Converter={StaticResource BoolToVis}}" DataContext="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <views:AddRoomView Visibility="{Binding IsAddRoomPopupVisible, Converter={StaticResource BoolToVis}}" DataContext="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <views:EditRoomView Visibility="{Binding IsEditRoomPopupVisible, Converter={StaticResource BoolToVis}}" DataContext="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- ✅ THAY ĐỔI: Visibility và DataContext cho popup xóa phòng -->
        <views:DeleteRoomView Visibility="{Binding IsDeleteRoomPopupVisible, Converter={StaticResource BoolToVis}}" 
                              DataContext="{Binding}" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
    </Grid>
</UserControl>