<UserControl x:Class="RoomManagementSystem.Presentation.Views.Page.HouseManagement.HouseManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:RoomManagementSystem.Presentation.Views.Page.HouseManagement"
             xmlns:vm="clr-namespace:RoomManagementSystem.Presentation.ViewModels"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             FontFamily="Roboto"
             d:DataContext="{d:DesignInstance Type=vm:HouseManagementViewModel}"
             Background="White">

    <UserControl.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F0EDFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="37"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <Image Source="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}}" 
                                   Width="20" Height="20"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#F0EDFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="37"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <Image Source="{Binding Tag, RelativeSource={RelativeSource AncestorType=ToggleButton}}" 
                                   Width="18" Height="18"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F0EDFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="35,0,10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" CornerRadius="10" Background="{TemplateBinding Background}">
                            <Grid>
                                <Image Source="../../../Resources/Images/search_icon.png" Width="18" Height="18" HorizontalAlignment="Left" Margin="10,0,0,0" Opacity="0.6"/>
                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" />
                                <TextBlock Text="Tìm kiếm" Foreground="#B5B7C0" IsHitTestVisible="False"
                                           VerticalAlignment="Center" Margin="{TemplateBinding Padding}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value=""/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HouseListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Height" Value="66"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="Transparent" CornerRadius="10" Margin="10,0">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F0EDFF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#5A67BA"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="1"/>
                                <Setter Property="FontWeight" Value="ExtraBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F5F4FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PaginationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="Foreground" Value="#404B52"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PaginationActiveButtonStyle" TargetType="Button" BasedOn="{StaticResource PaginationButtonStyle}">
            <Setter Property="Background" Value="#707FDD"/>
            <Setter Property="BorderBrush" Value="#5932EA"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="PaginationEllipsisStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Margin" Value="3,0"/>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
    </UserControl.Resources>

    <Grid>
        <Grid Margin="15,0,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Nhà" FontSize="18" FontWeight="Medium" Foreground="#1F384C" Margin="0,15,0,15"/>

                <Border Grid.Row="1" Grid.RowSpan="2" Background="#F0EDFF" Opacity="0.5" CornerRadius="15"/>
                <Grid Grid.Row="1" Margin="10,15" Height="37" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <ToggleButton x:Name="SearchToggleButton" Style="{StaticResource SearchToggleButtonStyle}" Tag="../../../Resources/Images/search_icon.png"/>
                        <!-- ✅ ĐÃ THAY THẾ CLICK BẰNG COMMAND -->
                        <Button Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/edit_icon.png" Margin="22,0,0,0" Command="{Binding EditHouseCommand}"/>
                        <Button Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/delete_icon.png" Margin="21,0,0,0" Command="{Binding DeleteHouseCommand}"/>
                        <Button Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/add_icon.png" Margin="21,0,0,0" Command="{Binding AddHouseCommand}"/>
                    </StackPanel>
                </Grid>



                <ListBox Grid.Row="2" 
         ItemsSource="{Binding DanhSachNha}"
         SelectedItem="{Binding SelectedNha, Mode=TwoWay}"
         BorderThickness="0" Background="Transparent" 
         ItemContainerStyle="{StaticResource HouseListItemStyle}"
         Margin="0,10,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <!-- Sử dụng TextBlock để binding vào thuộc tính MaNha -->
                            <TextBlock Text="{Binding MaNha}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>


            </Grid>

            <Grid Grid.Column="2" Margin="0,15,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Phòng" FontSize="18" FontWeight="Medium" Foreground="#1F384C" Margin="0,0,0,15"/>

                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#F0EDFF" Opacity="0.5" CornerRadius="15" Padding="20" MinHeight="110">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="../../../Resources/Images/location_icon.png" Width="38" Height="38" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding SelectedNha.DiaChi}" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="#F0EDFF" Opacity="0.5" CornerRadius="15" Padding="20" MinHeight="110">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="../../../Resources/Images/total_rooms_icon.png" Width="38" Height="38" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding SelectedNha.TongSoPhong, StringFormat='{}{0} phòng'}" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="4" Background="#F0EDFF" Opacity="0.5" CornerRadius="15" Padding="20" MinHeight="110">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="../../../Resources/Images/amenities_icon.png" Width="38" Height="38" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding SelectedNha.GhiChu}" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid Grid.Row="2" Margin="0,20,0,15">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <!-- TextBox này sẽ binding vào thuộc tính 'RoomSearchKeyword' trong ViewModel -->
                        <TextBox Style="{StaticResource SearchBoxStyle}" Width="216" Height="37"
                                 Text="{Binding RoomSearchKeyword, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Nút Sắp xếp này sẽ binding vào một Command và một thuộc tính 'SelectedSortOption' -->
                        <Button Name="RoomsSortButton" Margin="20,0,0,0" BorderThickness="0" Background="Transparent" Cursor="Hand">
                            <Border Background="#F0EDFF" CornerRadius="10" Padding="15,0">
                                <Grid Height="37" Width="171">
                                    <TextBlock Text="Sắp xếp theo: " VerticalAlignment="Center" Foreground="#7E7E7E"/>
                                    <TextBlock Text="{Binding SelectedSortOption}" VerticalAlignment="Center" FontWeight="Bold" Foreground="Black" Margin="90,0,0,0"/>
                                    <Path Data="M0,0 L4.5,4.3 L9,0" Stroke="#3D3C42" StrokeThickness="1.5" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                </Grid>
                            </Border>
                            <Button.ContextMenu>
                                <ContextMenu ItemsSource="{Binding SortOptions}">
                                    <ContextMenu.ItemContainerStyle>
                                        <Style TargetType="MenuItem">
                                            <!-- Command này sẽ nhận mục được chọn làm CommandParameter -->
                                            <Setter Property="Command" Value="{Binding DataContext.SortCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            <Setter Property="CommandParameter" Value="{Binding}"/>
                                        </Style>
                                    </ContextMenu.ItemContainerStyle>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/edit_icon.png" Margin="0,0,10,0" Command="{Binding EditRoomCommand}"/>
                        <Button Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/delete_icon.png" Margin="0,0,10,0" Command="{Binding DeleteRoomCommand}"/>
                        <Button Style="{StaticResource ActionButtonStyle}" Tag="../../../Resources/Images/add_icon.png" Command="{Binding AddRoomCommand}"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="3" Background="White" CornerRadius="15" Padding="20">
                    <StackPanel>
                        <Grid Margin="10,0,10,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Số phòng" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Grid.Column="2" Text="Diện tích" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Grid.Column="3" Text="Chi phí theo tháng" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Grid.Column="4" Text="Ngày bảo trì" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Grid.Column="5" Text="Ngày có sẵn" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Grid.Column="6" Text="Trạng thái" Foreground="#B5B7C0" FontWeight="Medium" FontSize="14"/>
                        </Grid>

                        <ListBox ItemsSource="{Binding DanhSachPhongHienThi}"
         SelectedItem="{Binding SelectedPhong, Mode=TwoWay}"
         Background="Transparent"
         BorderThickness="0"
         HorizontalContentAlignment="Stretch">

                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Background="Transparent">
                                                    <ContentPresenter />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#EEEEEE" BorderThickness="0,1,0,0" Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>
                                            <CheckBox Grid.Column="0" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding MaPhong}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="2" Text="{Binding DienTich, StringFormat='{}{0:0.0} m²'}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="{Binding GiaThue, StringFormat='{}{0:n0} đ'}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="4" Text="" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="5" Text="" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="6" Text="{Binding TrangThai}" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>


                    </StackPanel>
                </Border>

             <!--   <Grid Grid.Row="4" Margin="0,20,10,0">
                    <TextBlock x:Name="RoomsPaginationInfoText" VerticalAlignment="Center" Foreground="#B5B7C0" FontSize="14" FontWeight="Medium"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button x:Name="RoomsPrevPageButton" Style="{StaticResource PaginationButtonStyle}" Content="&lt;" Margin="0,0,12,0" Click="RoomsPrevPageButton_Click"/>
                        <StackPanel x:Name="RoomsPageButtonsPanel" Orientation="Horizontal"/>
                        <Button x:Name="RoomsNextPageButton" Style="{StaticResource PaginationButtonStyle}" Content=">" Margin="0,0,0,0" Click="RoomsNextPageButton_Click"/>
                    </StackPanel>
                </Grid>  -->
            </Grid>
        </Grid>

    <!--    <Border Background="Transparent" 
                Visibility="{Binding IsSearchVisible, Converter={StaticResource BoolToVis}}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <i:InvokeCommandAction Command="{Binding CloseSearchCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Border>
        -->

        <!-- Dialog Views -->
    <!--    <views:AddHouseView x:Name="AddHouseDialog" Visibility="Collapsed" 
                            HouseAdded="AddHouseDialog_HouseAdded" 
                            Canceled="AddHouseDialog_Canceled"/>
        <views:EditHouseView x:Name="EditHouseDialog" Visibility="Collapsed" 
                             HouseUpdated="EditHouseDialog_HouseUpdated" 
                             Canceled="EditHouseDialog_Canceled"/>
        <views:DeleteHouseView x:Name="DeleteHouseDialog" Visibility="Collapsed" 
                               ConfirmDelete="DeleteHouseDialog_ConfirmDelete" 
                               Canceled="DeleteHouseDialog_Canceled"/>
      -->
        <!-- Room Dialogs -->
        <!-- LỚP PHỦ CHO POPUP -->
        <Border Background="#80000000"
            Visibility="{Binding IsAddHousePopupVisible, Converter={StaticResource BoolToVis}}"/>

        <Border Background="#80000000"
        Visibility="{Binding IsEditHousePopupVisible, Converter={StaticResource BoolToVis}}"/>

        <Border Background="#80000000"
        Visibility="{Binding IsDeleteHousePopupVisible, Converter={StaticResource BoolToVis}}"/>

        <Border Background="#80000000"
        Visibility="{Binding IsAddRoomPopupVisible, Converter={StaticResource BoolToVis}}"/>

        <Border Background="#80000000"
        Visibility="{Binding IsEditRoomPopupVisible, Converter={StaticResource BoolToVis}}"/>


        <!-- POPUP THÊM NHÀ -->
        <!-- ✅ SỬA LẠI DATACONTEXT -->
        <views:AddHouseView Visibility="{Binding IsAddHousePopupVisible, Converter={StaticResource BoolToVis}}"
                        DataContext="{Binding}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
        

        <views:EditHouseView Visibility="{Binding IsEditHousePopupVisible, Converter={StaticResource BoolToVis}}"
                             DataContext="{Binding}"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
        
        <views:DeleteHouseView Visibility="{Binding IsDeleteHousePopupVisible, Converter={StaticResource BoolToVis}}"
                               DataContext="{Binding}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>


        

        <views:AddRoomView Visibility="{Binding IsAddRoomPopupVisible, Converter={StaticResource BoolToVis}}"
                           DataContext="{Binding}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

        

        <views:EditRoomView Visibility="{Binding IsEditRoomPopupVisible, Converter={StaticResource BoolToVis}}"
                            DataContext="{Binding}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>

    </Grid>
</UserControl>