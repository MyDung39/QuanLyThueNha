<UserControl x:Class="RoomManagementSystem.Presentation.Views.Page.TenantManagement.AddTenantView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="535" Height="362"
             FontFamily="Roboto">

    <UserControl.Effect>
        <DropShadowEffect ShadowDepth="1" BlurRadius="5" Color="Black" Opacity="0.14"/>
    </UserControl.Effect>

    <UserControl.Resources>
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <Image Source="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}}"
                                   Width="16" Height="16" Opacity="0.6" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="#F9FBFF"/>
            <Setter Property="BorderBrush" Value="#F0EEEE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="9.5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <DatePickerTextBox x:Name="PART_TextBox"
                                                   Grid.Column="0"
                                                   Padding="{TemplateBinding Padding}"
                                                   BorderThickness="0"
                                                   Background="Transparent"
                                                   VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                   Text="{Binding Path=SelectedDate, StringFormat='dd/MM/yyyy', RelativeSource={RelativeSource TemplatedParent}}"/>

                                <Button x:Name="PART_Button"
                                        Grid.Column="1"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource IconButtonStyle}"
                                        Tag="/Resources/Images/calendar_icon.png"/>

                                <Popup x:Name="PART_Popup"
                                       AllowsTransparency="True"
                                       Placement="Bottom"
                                       PlacementTarget="{Binding ElementName=PART_TextBox}"
                                       StaysOpen="False"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="White" CornerRadius="14">
        <Grid>
            <!-- Nút đóng (X) -->
            <Button Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Margin="0,15,15,0" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="CloseButton_OnClick">
                <Path Data="M 0,0 L 12,12 M 0,12 L 12,0" Stroke="#565656" StrokeThickness="1.5"/>
            </Button>

            <StackPanel Margin="40,40,40,40">
                <!-- Tiêu đề -->
                <TextBlock Text="Thêm thông tin người thuê"
                           FontSize="20"
                           Foreground="#8A8A8A"
                           Margin="0,0,0,25"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cột bên trái -->
                    <StackPanel Grid.Column="0">
                        <!-- Tên -->
                        <TextBlock Text="Tên" FontSize="13" Foreground="#292D32" Margin="0,0,0,8"/>
                        <TextBox Padding="15,10" BorderThickness="1" BorderBrush="#F0EEEE" Background="#F9FBFF">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="9.5"/>
                                </Style>
                            </TextBox.Resources>
                            <TextBox.Tag>
                                Nhập họ và tên
                            </TextBox.Tag>
                        </TextBox>

                        <!-- Số điện thoại -->
                        <TextBlock Text="Số điện thoại" FontSize="13" Foreground="#292D32" Margin="0,20,0,8"/>
                        <Grid>
                            <TextBox Padding="50,10,15,10" BorderThickness="1" BorderBrush="#F0EEEE" Background="#F9FBFF">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="9.5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <Border Width="34" Height="28" Background="#F0F0F0" CornerRadius="9" HorizontalAlignment="Left" Margin="6,0,0,0">
                                <TextBlock Text="VN" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <!-- Cột bên phải -->
                    <StackPanel Grid.Column="2">
                        <!-- Email -->
                        <TextBlock Text="Địa chỉ Email" FontSize="13" Foreground="#292D32" Margin="0,0,0,8"/>
                        <TextBox Padding="15,10" BorderThickness="1" BorderBrush="#F0EEEE" Background="#F9FBFF">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="9.5"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <!-- Ngày bắt đầu thuê -->
                        <TextBlock Text="Ngày bắt đầu thuê" FontSize="13" Foreground="#292D32" Margin="0,20,0,8"/>
                        <DatePicker Style="{StaticResource CustomDatePickerStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- Hàng nút hành động -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                    <Button Content="Hủy"
                            Background="Transparent" Foreground="#7E7E7E" BorderBrush="#EEEEEE" BorderThickness="1"
                            Padding="20,10" Margin="0,0,10,0"
                            Click="CloseButton_OnClick"/>
                    <Button Content="Thêm"
                            Background="#707FDD" Foreground="White" BorderThickness="0"
                            Padding="20,10" Click="CloseButton_OnClick"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

