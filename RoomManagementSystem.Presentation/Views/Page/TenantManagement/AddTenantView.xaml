                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <Border Width="34" Height="28" Background="#F0F0F0" CornerRadius="9" HorizontalAlignment="Left" Margin="6,0,0,0">
                                <TextBlock Text="VN" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Äá»‹a chá»‰ Email" FontSize="13" Foreground="#292D32" Margin="0,0,0,8"/>
                        <TextBox Padding="15,10" BorderThickness="1" BorderBrush="#F0EEEE" Background="#F9FBFF">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="9.5"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock Text="NgÃ y báº¯t Ä‘áº§u thuÃª" FontSize="13" Foreground="#292D32" Margin="0,20,0,8"/>
                        <DatePicker SelectedDate="{x:Static sys:DateTime.Now}" Style="{StaticResource CustomDatePickerStyle}"/>
                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                    <Button Content="ThÃªm" FontSize="14" FontWeight="Medium" Foreground="White" Background="#5A67BA"
                            Width="80" Padding="0,8" Click="AddButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
