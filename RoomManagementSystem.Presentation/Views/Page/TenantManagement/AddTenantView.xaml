    <UserControl.Resources>
        <!-- Style nÃ y khÃ´ng cáº§n thiáº¿t ná»¯a vÃ¬ chÃºng ta sáº½ style trá»±c tiáº¿p trong ControlTemplate -->
        <!-- <Style x:Key="IconButtonStyle" TargetType="Button"> ... </Style> -->

        <Style x:Key="CustomDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="#F9FBFF"/>
            <Setter Property="BorderBrush" Value="#F0EEEE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="9.5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <DatePickerTextBox x:Name="PART_TextBox"
                                                   Grid.Column="0"
                                                   Padding="{TemplateBinding Padding}"
                                                   BorderThickness="0"
                                                   Background="Transparent"
                                                   VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                   Text="{Binding Path=SelectedDate, StringFormat='dd/MM/yyyy', RelativeSource={RelativeSource TemplatedParent}}"/>

                                <!-- === Sá»¬A Lá»–I CÃš PHÃP á»ž ÄÃ‚Y === -->
                                <Button x:Name="PART_Button"
                                        Grid.Column="1"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <TextBlock x:Name="Icon"
                                               Text="ðŸ“…"
                                               Foreground="#8A8A8A"
                                               FontSize="16"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Button>
                                <!-- === Káº¾T THÃšC Sá»¬A Lá»–I === -->

                                <Popup x:Name="PART_Popup"
                                       AllowsTransparency="True"
                                       Placement="Bottom"
                                       PlacementTarget="{Binding ElementName=PART_TextBox}"
                                       StaysOpen="False"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Icon" Property="Foreground" Value="#5A67BA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="White" CornerRadius="14">
        <Grid>
            <Button Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Margin="0,15,15,0" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="CloseButton_Click">
                <Path Data="M 0,0 L 12,12 M 0,12 L 12,0" Stroke="#565656" StrokeThickness="1.5"/>
            </Button>

            <StackPanel Margin="40,40,40,40">
                <TextBlock Text="ThÃªm thÃ´ng tin ngÆ°á»i thuÃª" FontSize="20" Foreground="#8A8A8A" Margin="0,0,0,25"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="TÃªn" FontSize="13" Foreground="#292D32" Margin="0,0,0,8"/>
                        <TextBox Padding="15,10" BorderThickness="1" BorderBrush="#F0EEEE" Background="#F9FBFF">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="9.5"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock Text="Sá»‘ Ä‘iá»‡n thoáº¡i" FontSize="13" Foreground="#292D32" Margin="0,20,0,8"/>
                        <Grid>
                            <TextBox Padding="50,10,15,10" BorderThickness="1" BorderBrush="#F0EEEE" Background="#F9FBFF">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
