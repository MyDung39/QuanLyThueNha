<Window x:Class="RoomManagementSystem.Presentation.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shared="clr-namespace:RoomManagementSystem.Presentation.Views.Shared"
        xmlns:viewModel="clr-namespace:RoomManagementSystem.Presentation.ViewModels"
        xmlns:dash="clr-namespace:RoomManagementSystem.Presentation.Views"
        xmlns:tenant="clr-namespace:RoomManagementSystem.Presentation.Views.Page.TenantManagement"
        xmlns:page="clr-namespace:RoomManagementSystem.Presentation.Views.Page"
        xmlns:contract="clr-namespace:RoomManagementSystem.Presentation.Views.Page.ContractManagement"
        xmlns:house="clr-namespace:RoomManagementSystem.Presentation.Views.Page.HouseManagement"
        xmlns:service="clr-namespace:RoomManagementSystem.Presentation.Views.Page.ServiceManagement"
        mc:Ignorable="d"
        Title="Quản lý thuê nhà" Height="720" Width="1280"
        Icon="/Resources/Images/logo_app.png"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:TenantManagementViewModel}">
            <tenant:TenantManagementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:BillingViewModel}">
            <page:BillingView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:HouseManagementViewModel}">
            <house:HouseManagementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ContractManagementViewModel}">
            <contract:ContractManagementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ServiceManagementViewModel}">
            <service:ServiceManagementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:DashboardViewModel}">
            <dash:DashboardView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Đặt tên cho cột để có thể thay đổi độ rộng -->
            <ColumnDefinition x:Name="SidebarColumn" Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar lớn (mặc định hiển thị) -->
        <shared:SidebarView x:Name="FullSidebar" Grid.Column="0" Visibility="Visible"/>

        <!-- Sidebar nhỏ (mặc định ẩn) -->
        <shared:SidebarSmallView x:Name="SmallSidebar" Grid.Column="0" Visibility="Collapsed"/>

        <!-- Khu vực nội dung chính -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- === THAY ĐỔI Ở ĐÂY: "Lắng nghe" sự kiện từ HeaderView === -->
            <shared:HeaderView Grid.Row="0"
                               ToggleSidebarClick="HeaderView_ToggleSidebarClick"/>

            <ContentControl x:Name="MainContent" Grid.Row="1" Content="{Binding CurrentViewModel}"/>
        </Grid>
    </Grid>
</Window>