<Window x:Class="RoomManagementSystem.Presentation.Views.Windows.BillingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoomManagementSystem.Presentation.Views.Windows"
        mc:Ignorable="d"
        Title="BillingWindow" Height="960" Width="1440">


    <Grid>
        <!-- Chia layout chính: 2 hàng × 2 cột -->
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <!-- Top bar -->
            <RowDefinition Height="*"/>
            <!-- Nội dung -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="59"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main -->
        </Grid.ColumnDefinitions>

        <!-- ========== SIDEBAR (cột 0, chiếm cả 2 hàng) ========== -->
        <Grid Grid.RowSpan="2" Grid.Column="0" Background="#CCF0EDFF">
            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Center"
                        Margin="6,16">
                <!-- Logo -->
                <Button Width="44" Height="44"
                        Background="Transparent"
                        BorderThickness="0">
                    <Image Source="/Resources/Images/Logo_Plumeria.png"
                           Width="32" Height="32"/>
                </Button>

                <Separator Margin="0,12" Width="36" Background="#E6E2F5"/>

                <!-- Menu buttons -->
                <Button Width="44" Height="44"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,8,0,0">
                    <Image Source="/Resources/Images/Propertises-icon.png"
                           Width="22" Height="22"/>
                </Button>


                <!-- Nút Customers -->
                <Button Width="44" Height="44"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="0,8,0,0"
                    ToolTip="Customers">
                        <Image Source="/Resources/Images/customer-icon.png"
                       Width="22" Height="22"/>
                </Button>

                <!-- Nút Reports -->
                <Button Width="44" Height="44"
                Background="Transparent"
                BorderThickness="0"
                Margin="0,8,0,0"
                ToolTip="Reports">
                    <Image Source="/Resources/Images/report-icon.png"
                   Width="22" Height="22"/>
                </Button>

                <!-- Nút Settings -->
                <Button Width="44" Height="44"
                Background="Transparent"
                BorderThickness="0"
                Margin="0,8,0,0"
                ToolTip="Settings">
                    <Image Source="/Resources/Images/reservations-icon.png"
                   Width="22" Height="22"/>
                </Button>

            </StackPanel>
        </Grid>

        <!-- ========== TOP BAR (hàng 0, cột 1) ========== -->
        <Grid Grid.Row="0" Grid.Column="1" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Menu icon -->
            <Button Width="32" Height="32" Margin="16,0"
                    Background="Transparent" BorderThickness="0">
                <Image Source="/Resources/Images/Menu.png"
                       Width="20" Height="20"/>
            </Button>

            <!-- User info + Notification -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                <Button Width="32" Height="32" Background="Transparent" BorderThickness="0" Margin="0,0,8,0">
                    <Image Source="/Resources/Images/profile-circle.png" Width="20" Height="20"/>
                </Button>
                <TextBlock Text="Xin chào, Bảo" VerticalAlignment="Center" Foreground="#444" FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>

        <!-- ========== MAIN CONTENT (hàng 1, cột 1) ========== -->
        <Grid Grid.Row="1" Grid.Column="1" Background="White" Margin="16,0,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Tiêu đề Billing -->
                <RowDefinition Height="*"/>
                <!-- Nội dung chính -->
            </Grid.RowDefinitions>

            <!-- Tiêu đề Billing -->
            <TextBlock Text="Billing"
               Grid.Row="0"
               FontSize="22"
               FontWeight="SemiBold"
               Foreground="#333"
               Margin="12,16,0,12"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"/>

            
            <!-- ================== NỘI DUNG CHÍNH (3 CỘT) ================== -->
    <Grid Grid.Row="1" Margin="0,0,0,0" RenderTransformOrigin="0.502,0.498">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>  <!-- Cột trái: Danh sách phòng -->
            <ColumnDefinition Width="*"/>    <!-- Cột giữa: Nội dung hóa đơn -->
            <ColumnDefinition Width="300"/>  <!-- Cột phải: Tóm tắt -->
        </Grid.ColumnDefinitions>

        <!-- ===== CỘT 1: DANH SÁCH PHÒNG ===== -->
                <!-- ===== CỘT 1: DANH SÁCH PHÒNG ===== -->
                <Border Grid.Column="0"
                Background="White"
                CornerRadius="12"
                BorderBrush="#B5B7C080"
                BorderThickness="1"
                Padding="0"
                Margin="0,0,16,0">

                    <StackPanel>
                        <!-- ===== THANH TIÊU ĐỀ (header nhỏ màu tím nhạt) ===== -->
                        <!-- rgba(240,237,255,0.30) ~ #4DF0EDFF -->
                        <Border Background="#4DF0EDFF"
                        Height="52"
                        CornerRadius="8"
                        Margin="12,12,12,8"
                        Padding="12,0">
                            <DockPanel LastChildFill="True">

                                <!-- Text “Danh sách phòng” -->
                                <TextBlock Text="Danh sách phòng"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="#2E2E2E"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left"/>

                                <!-- Icon chỉnh sửa -->
                                <Button Width="26"
                                    Height="26"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Margin="7,0,0,0"
                                    ToolTip="Chỉnh sửa danh sách phòng">
                                   <Image Source="/Resources/Images/edit-icon.png"
                                       Width="26" Height="26"/>
                                </Button>

                                <!-- Icon menu 3 chấm -->
                                <Button Width="26"
                    Height="26"
                    Background="Transparent"
                    BorderThickness="0"
                    ToolTip="Tùy chọn">
                                    <Image Source="/Resources/Images/3dot-icon.png"
                       Width="26" Height="26"/>
                                </Button>
                            </DockPanel>
                        </Border>

                        <!-- ===== DANH SÁCH PHÒNG (cuộn được) ===== -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="12,0,12,12">
                            <StackPanel>

                                <!-- Nhà Nguyễn Trãi -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Nhà Nguyễn Trãi"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="#444"
                                    Margin="0,0,0,6"/>

                                    <Border Background="#F9F8FF"
                                    CornerRadius="10"
                                    Padding="8"
                                    BorderBrush="#ECE9FE"
                                    BorderThickness="1">
                                        <StackPanel>
                                            <Button Content="APPLE-001"
                                            FontWeight="Bold"
                                            Background="#F5F3FF"
                                            BorderBrush="#D9D6FE"
                                            BorderThickness="1"
                                            Foreground="#2C2C54"
                                            Margin="0,2,0,2"
                                            Padding="8,4"
                                            HorizontalContentAlignment="Left"/>

                                            <Button Content="ORANGE-002"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Foreground="#444"
                                            Margin="0,2,0,2"
                                            Padding="8,4"
                                            HorizontalContentAlignment="Left"/>

                                            <Button Content="BANANA-001"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Foreground="#444"
                                            Margin="0,2,0,2"
                                            Padding="8,4"
                                            HorizontalContentAlignment="Left"/>

                                            <Button Content="CHERRY-001"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Foreground="#444"
                                            Margin="0,2,0,2"
                                            Padding="8,4"
                                            HorizontalContentAlignment="Left"/>

                                            <Button Content="STRAWBERRY-001"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Foreground="#444"
                                            Margin="0,2,0,2"
                                            Padding="8,4"
                                            HorizontalContentAlignment="Left"/>


                                            <Button Content="COCONUT-001"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Foreground="#444"
                                            Margin="0,2,0,2"
                                            Padding="8,4"
                                            HorizontalContentAlignment="Left"/>

                                        </StackPanel>
                                    </Border>
                                </StackPanel>


                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Nhà Bạch Đằng"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#444"
                               Margin="0,0,0,6"/>

                                    <Border Background="#F9F8FF"
                                    CornerRadius="10"
                                    Padding="8"
                                    BorderBrush="#ECE9FE"
                                    BorderThickness="1">
                                        <StackPanel>
                                            <Button Content="APPLE-001"
                                            FontWeight="Bold"
                                            Background="#F5F3FF"
                                            BorderBrush="#D9D6FE"
                                            BorderThickness="1"
                                            Foreground="#2C2C54"
                                            Margin="0,2,0,2"
                                            Padding="8,4"
                                            HorizontalContentAlignment="Left"/>

                                            <Button Content="ORANGE-002"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Foreground="#444"
                                            Margin="0,2,0,2"
                                            Padding="8,4"
                                            HorizontalContentAlignment="Left"/>

                                            <Button Content="BANANA-001"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Foreground="#444"
                                            Margin="0,2,0,2"
                                            Padding="8,4"
                                            HorizontalContentAlignment="Left"/>

                                            <Button Content="APPLE-004"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Foreground="#444"
                                            Margin="0,2,0,2"
                                            Padding="8,4"
                                            HorizontalContentAlignment="Left"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Border>


                <!-- ===== CỘT 2: CHI TIẾT HÓA ĐƠN ===== -->
                <!-- ===== CỘT 2: CHI TIẾT HÓA ĐƠN ===== -->
                <Border Grid.Column="1"
        Background="White"
        CornerRadius="12"
        BorderBrush="#DCDCDC"
        BorderThickness="1"
        Padding="24"
        Margin="0,0,16,0"
        SnapsToDevicePixels="True">

                    <StackPanel Orientation="Vertical" >

                        <!-- ===== PHẦN HEADER ===== -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Logo + thông tin công ty -->
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Resources/Images/Logo_Plumeria.png"
                       Width="52" Height="52" Margin="0,0,12,0"/>
                                <StackPanel>
                                    <TextBlock Text="Plumeria Family"
                               FontSize="18" FontWeight="Bold" Foreground="#222"/>
                                    <TextBlock Text="Trần Thanh Nhã" FontSize="13" Foreground="#555"/>
                                    <TextBlock Text="Đại học Tôn Đức Thắng, Tân Hưng, TP.HCM" 
                               FontSize="13" Foreground="#555"/>
                                    <TextBlock Text="+84 9 0808 3890 | plumeriafamily@outlook.com"
                               FontSize="13" Foreground="#555"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Mã hóa đơn + tổng tiền -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right">
                                <Border Background="#F6F6F9" CornerRadius="8" Padding="8,4" Margin="0,0,0,8">
                                    <TextBlock Text="#HD/2014/APPLE-001"
                               FontSize="13" Foreground="#444"/>
                                </Border>

                                <TextBlock Text="Tổng số tiền" 
                           FontSize="13" Foreground="#666" 
                           HorizontalAlignment="Right"/>
                                <TextBlock Text="3,550,000 VND"
                           FontSize="22" FontWeight="Bold"
                           Foreground="#333"
                           HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>

                        <Separator Margin="0,8,0,16"/>

                        <!-- ===== THÔNG TIN HÓA ĐƠN ===== -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Width="330"
        Padding="20"
        CornerRadius="8"
        Background="#FAFAFA"
        Margin="0,16,16,16">
    <StackPanel Orientation="Vertical"
                VerticalAlignment="Center"
                HorizontalAlignment="Left">

        <!-- Ngày lập hóa đơn -->
        <StackPanel Margin="0,0,0,16">
            <TextBlock Text="Ngày lập hóa đơn"
                       Foreground="#777"
                       FontSize="12"/>
            <TextBlock Text="05/05/2025"
                       FontWeight="Bold"
                       FontSize="14"
                       Foreground="#222"/>
        </StackPanel>

        <!-- Ngày tính -->
        <StackPanel Margin="0,0,0,16">
            <TextBlock Text="Ngày tính"
                       Foreground="#777"
                       FontSize="12"/>
            <TextBlock Text="06/05/2025"
                       FontWeight="Bold"
                       FontSize="14"
                       Foreground="#222"/>
        </StackPanel>

        <!-- Thời gian thanh toán -->
        <StackPanel Margin="0,0,0,16">
            <TextBlock Text="Thời gian thanh toán"
                       Foreground="#777"
                       FontSize="12"/>
            <TextBlock Text="Trong vòng 15 ngày"
                       FontWeight="Bold"
                       FontSize="14"
                       Foreground="#222"/>
        </StackPanel>

        <!-- Ngày đóng -->
        <StackPanel>
            <TextBlock Text="Ngày đóng"
                       Foreground="#777"
                       FontSize="12"/>
            <TextBlock Text="20/05/2025"
                       FontWeight="Bold"
                       FontSize="14"
                       Foreground="#222"/>
        </StackPanel>

    </StackPanel>
</Border>


                            <!-- Bên phải -->
                            <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                <TextBlock Text="Địa chỉ phòng cần thanh toán" FontWeight="SemiBold" Foreground="#666"/>
                                <TextBlock Text="APPLE-001" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
                                <TextBlock Text="Nhà: Nguyen Trai House" FontSize="13" Foreground="#555"/>
                                <TextBlock Text="Đến: Trần Quốc Anh, Đỗ Văn Quí" FontSize="13" Foreground="#555" Margin="0,0,0,8"/>
                                <TextBlock Text="Ghi chú" FontWeight="SemiBold" Foreground="#666"/>
                                <TextBlock Text="Cảm ơn quý khách đã lưu trú tại đây. Vui lòng thanh toán trước ngày 16/10/2025. Liên hệ quản lý nếu có thắc mắc."
                           TextWrapping="Wrap"
                           FontSize="13"
                            FontWeight="Bold"
                           Foreground="#555"
                           Width="320"/>
                            </StackPanel>
                        </Grid>

                        <!-- Bảng dịch vụ -->
                        <!-- ===== BẢNG DỊCH VỤ ===== -->
                        <!-- Header -->
                        <Border Background="#F6F6F9" CornerRadius="4" Padding="12,8" Margin="0,0,0,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="STT" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#444"/>
                                <TextBlock Grid.Column="1" Text="NỘI DUNG" FontWeight="Bold" Foreground="#444"/>
                                <TextBlock Grid.Column="2" Text="SỐ LƯỢNG" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#444"/>
                                <TextBlock Grid.Column="3" Text="GIÁ ĐƠN VỊ" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#444"/>
                                <TextBlock Grid.Column="4" Text="ĐƠN VỊ" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#444"/>
                                <TextBlock Grid.Column="5" Text="SỐ TIỀN" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#444"/>
                            </Grid>
                        </Border>

                        <!-- ===== Dòng dịch vụ ===== -->
                        <Border Padding="12,8" Background="#FAFAFA" CornerRadius="4" Margin="0,0,0,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                                    <TextBlock Text="Tiền thuê phòng" FontWeight="Bold" Foreground="#222"/>
                                    <TextBlock Text="Tiền thuê phòng hàng tháng" FontSize="12" Foreground="#666"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="3,000,000" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="phòng" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="5" Text="3,000,000" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                            </Grid>
                        </Border>

                        <!-- Dòng dịch vụ ví dụ 2 -->
                        <Border Padding="12,8" Background="White" CornerRadius="4" Margin="0,0,0,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                                    <TextBlock Text="Điện" FontWeight="Bold" Foreground="#222"/>
                                    <TextBlock Text="Phí sử dụng điện" FontSize="12" Foreground="#666"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="105" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="4,500" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="kWh" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="5" Text="472,500" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                            </Grid>
                        </Border>

                        <!-- Dòng dịch vụ ví dụ 3 -->
                        <Border Padding="12,8" Background="#FAFAFA" CornerRadius="4" Margin="0,0,0,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                                    <TextBlock Text="Nước" FontWeight="Bold" Foreground="#222"/>
                                    <TextBlock Text="Phí sử dụng nước" FontSize="12" Foreground="#666"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="6" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="13,000" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="m³" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="5" Text="78,000" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                            </Grid>
                        </Border>

                    </StackPanel>
                </Border>




                <!-- ===== CỘT 3: TÓM TẮT / TRẠNG THÁI ===== -->
        <Border Grid.Column="2"
                Background="#FFF"
                CornerRadius="12"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Padding="16">
            <TextBlock Text="Tóm tắt hóa đơn"
                       FontSize="14"
                       Foreground="#555"
                       VerticalAlignment="Top"/>
        </Border>
    </Grid>


        </Grid>
    </Grid>
    
</Window>
