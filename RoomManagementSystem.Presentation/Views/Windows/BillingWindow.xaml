<Window x:Class="RoomManagementSystem.Presentation.Views.Windows.BillingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shared="clr-namespace:RoomManagementSystem.Presentation.Views.Shared"
        mc:Ignorable="d"
        Title="Billing" Height="960" Width="1440"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">

    <!-- ========== KHAI BÁO RESOURCE CHO NÚT BO GÓC ========== -->
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#16A34A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.75"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- ========== NỘI DUNG CHÍNH ========== -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <shared:SidebarView x:Name="FullSidebar" Grid.Column="0" Visibility="Visible"/>
        <shared:SidebarSmallView x:Name="SmallSidebar" Grid.Column="0" Visibility="Collapsed"/>

        <!-- Nội dung chính -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <shared:HeaderView Grid.Row="0"
                               ToggleSidebarClick="HeaderView_ToggleSidebarClick"/>

            <!-- Nội dung Billing -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="White">
                <Grid Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Tiêu đề -->
                    <TextBlock Grid.Row="0"
                               Text="Hóa đơn"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#1E1E2F"
                               Margin="0,0,0,24"/>

                    <!-- 3 cột chính -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Cột 1: Danh sách phòng -->
                        <Border Grid.Column="0"
                                Padding="16"
                                CornerRadius="12"
                                Background="#F9FAFB"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                Margin="0,0,16,0">
                            <StackPanel>
                                <TextBlock Text="Danh sách phòng"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="#1E1E2F"
                                           Margin="0,0,0,12"/>
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="12,0,12,12">
                                    <StackPanel>
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="Nhà Nguyễn Trãi" FontSize="14" FontWeight="SemiBold" Foreground="#444" Margin="0,0,0,6"/>
                                            <Border Background="#F9F8FF" CornerRadius="10" Padding="8" BorderBrush="#ECE9FE" BorderThickness="1">
                                                <StackPanel>
                                                    <Button Content="APPLE-001" FontWeight="Bold" Background="#F5F3FF" BorderBrush="#D9D6FE" BorderThickness="1" Foreground="#2C2C54" Margin="0,2,0,2" Padding="8,4" HorizontalContentAlignment="Left"/>
                                                    <Button Content="ORANGE-002" Background="Transparent" BorderBrush="Transparent" Foreground="#444" Margin="0,2,0,2" Padding="8,4" HorizontalContentAlignment="Left"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>

                        <!-- Cột 2: Dịch vụ -->
                        <Border Grid.Column="1"
        Padding="24"
        CornerRadius="12"
        Background="White"
        Margin="12,0,12,0"
        BorderBrush="#E5E7EB"
        Width="550"
        BorderThickness="1">

                            <StackPanel>

                                <!-- ===== THÔNG TIN HÓA ĐƠN ===== -->
                                <Grid Margin="0,0,0,24">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Cột trái: Thông tin khách hàng -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Plumeria Family" FontSize="18" FontWeight="Bold" Foreground="#1E1E2F"/>
                                        <TextBlock Text="Trần Thanh Nhã" Foreground="#555" FontSize="13" Margin="0,2,0,0"/>
                                        <TextBlock Text="Đại học Tôn Đức Thắng, Tân Hưng, TP.HCM" Foreground="#777" FontSize="12" Margin="0,2,0,0"/>
                                        <TextBlock Text="+84 9 0808 3890 | plumeriafamily@outlook.com" Foreground="#777" FontSize="12"/>
                                    </StackPanel>

                                    <!-- Cột phải: Mã và tổng tiền -->
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Text="#HD/2014/APPLE-001" FontSize="12" Foreground="#777" TextAlignment="Right"/>
                                        <TextBlock Text="Tổng số tiền" FontSize="13" Foreground="#444" Margin="0,4,0,0" TextAlignment="Right"/>
                                        <TextBlock Text="3,550,000 VND" FontSize="22" FontWeight="Bold" Foreground="#1E1E2F" TextAlignment="Right"/>
                                    </StackPanel>
                                </Grid>

                                <!-- ===== THÔNG TIN NGÀY VÀ ĐỊA CHỈ ===== -->
                                <Border BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,24">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Cột trái -->
                                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                            <TextBlock Text="Ngày lập hóa đơn" FontSize="12" Foreground="#777"/>
                                            <TextBlock Text="05/05/2025" FontSize="13" FontWeight="SemiBold" Foreground="#1E1E2F" Margin="0,2,0,6"/>
                                            <TextBlock Text="Ngày tính" FontSize="12" Foreground="#777"/>
                                            <TextBlock Text="06/05/2025" FontSize="13" FontWeight="SemiBold" Margin="0,2,0,6"/>
                                            <TextBlock Text="Thời gian thanh toán" FontSize="12" Foreground="#777"/>
                                            <TextBlock Text="Trong vòng 15 ngày" FontSize="13" FontWeight="SemiBold" Margin="0,2,0,6"/>
                                            <TextBlock Text="Ngày đóng" FontSize="12" Foreground="#777"/>
                                            <TextBlock Text="20/05/2025" FontSize="13" FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <!-- Cột phải -->
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                            <TextBlock Text="Địa chỉ phòng cần thanh toán" FontSize="12" Foreground="#777"/>
                                            <TextBlock Text="APPLE-001" FontSize="13" FontWeight="SemiBold" Margin="0,2,0,6"/>
                                            <TextBlock Text="Nhà: Nguyen Trai House" FontSize="12" Foreground="#555"/>
                                            <TextBlock Text="Đến: Trần Quốc Anh, Đỗ Văn Quí" FontSize="12" Foreground="#555" Margin="0,0,0,6"/>
                                            <TextBlock Text="Ghi chú" FontSize="12" Foreground="#777" Margin="0,4,0,2"/>
                                            <TextBlock Text="Cảm ơn quý khách đã lưu trú tại đây. Hóa đơn này áp dụng cho thời gian từ 04/06/2025 đến 05/06/2025. Vui lòng thanh toán trước ngày 16/10/2025." 
                               TextWrapping="Wrap"
                               FontSize="12" Foreground="#555"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- ===== BẢNG CHI TIẾT ===== -->
                                <DataGrid AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="Horizontal"
                                          BorderThickness="0"
                                          Background="#FFF7F7F7"
                                          Margin="0,0,0,24"
                                          VerticalGridLinesBrush="Transparent"   
                                    HorizontalGridLinesBrush="#FFE0E0E0">
                                    <!-- Màu đường ngang nhẹ -->

                                    <!-- Style cho header -->
                                    <DataGrid.Resources>
                                        <Style TargetType="DataGridColumnHeader">
                                            <!-- Màu nền header -->
                                            <Setter Property="Background" Value="#F3F4F6"/>
                                            <!-- xám nhạt -->
                                            <!-- Màu chữ -->
                                            <Setter Property="Foreground" Value="#667085"/>
                                            <!-- đen xám đậm -->
                                            <!-- Độ đậm chữ -->
                                            <Setter Property="FontWeight" Value="Normal"/>
                                            <!-- Căn giữa -->
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            <!-- Padding -->
                                            <Setter Property="Padding" Value="10,6"/>
                                            <Setter Property="FontSize" Value="10"/>
                                            <!-- Ẩn viền chia cột -->
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Style>
                                    </DataGrid.Resources>

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="STT" Binding="{Binding ID}" Width="50"/>
                                        <DataGridTextColumn Header="NỘI DUNG" Binding="{Binding Name}" Width="2*"/>
                                        <DataGridTextColumn Header="SỐ LƯỢNG" Binding="{Binding Quantity}" Width="*"/>
                                        <DataGridTextColumn Header="GIÁ ĐƠN VỊ" Binding="{Binding Price}" Width="*"/>
                                        <DataGridTextColumn Header="ĐƠN VỊ" Binding="{Binding Unit}" Width="*"/>
                                        <DataGridTextColumn Header="SỐ TIỀN" Binding="{Binding Total}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- ===== TỔNG KẾT ===== -->
                                

                            </StackPanel>
                        </Border>

                        <!-- Cột 3: Tóm tắt -->
                        <Border Grid.Column="2" Padding="20" CornerRadius="12"
                                Background="White" Margin="15,0,0,0"
                                BorderBrush="#E0E0E0"
                                Width="290"
                                BorderThickness="1">
                            <StackPanel>
                                <!-- Tiêu đề -->
                                <TextBlock Text="Tóm tắt" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                                <!-- Tổng -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Tổng" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding TotalAmount}" 
                       Grid.Column="1" 
                       FontWeight="Bold" 
                       Foreground="#333"/>
                                </Grid>

                                <Separator Margin="0,0,0,10"/>

                                <!-- Danh sách các hóa đơn / thanh toán -->
                                <StackPanel>
                                    <!-- 1. Hóa đơn chính -->
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <Ellipse Width="8" Height="8" Fill="#22C55E" VerticalAlignment="Top" Margin="0,5,10,0"/>
                                        <StackPanel>
                                            <TextBlock Text="Hóa đơn Số: #HD/20225/APPLE-001" FontWeight="Bold"/>
                                            <TextBlock Text="Ngày 5 Thg 6, 2025" Foreground="Gray" FontSize="12"/>
                                            <TextBlock Text="Số tiền 3,550,000 VND" Foreground="#111827" FontSize="13" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- 2. Thanh toán đặt cọc -->
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <Ellipse Width="8" Height="8" Fill="#22C55E" VerticalAlignment="Top" Margin="0,5,10,0"/>
                                        <StackPanel>
                                            <TextBlock Text="Đã thanh toán đặt cọc" FontWeight="Bold"/>
                                            <TextBlock Text="Ngày 3 Thg 5, 2025" Foreground="Gray" FontSize="12"/>
                                            <TextBlock Text="Số tiền 700,000 VND" Foreground="#111827" FontSize="13" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- 3. Lắp đặt thiết bị -->
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <Ellipse Width="8" Height="8" Fill="#22C55E" VerticalAlignment="Top" Margin="0,5,10,0"/>
                                        <StackPanel>
                                            <TextBlock Text="Lắp đặt thiết bị" FontWeight="Bold"/>
                                            <TextBlock Text="Ngày 1 Thg 5, 2025" Foreground="Gray" FontSize="12"/>
                                            <TextBlock Text="Số tiền 300,000 VND" Foreground="#111827" FontSize="13" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Tổng tiền cần trả -->
                                <Border Background="#FDF2F8" CornerRadius="6" Margin="0,15,0,0" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Số tiền cần trả" FontWeight="Bold"/>
                                        <Border Grid.Column="1"
                                                Background="#F3E8FF"
                                                CornerRadius="4"
                                                Padding="6,2"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="2,550,000 VND"
                                                        FontWeight="Bold"
                                                        Foreground="#6B21A8"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
