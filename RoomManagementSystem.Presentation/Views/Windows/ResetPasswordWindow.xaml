<Window x:Class="RoomManagementSystem.Presentation.Views.Windows.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset Password"
        MinWidth="960" MinHeight="640"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FontFamily="Roboto"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        UseLayoutRounding="True">

    <Window.Resources>
        <!-- Style cho Border chính của cửa sổ -->
        <Style TargetType="Border" x:Key="MainWindowBorderStyle">
            <Setter Property="CornerRadius" Value="10"/>
        </Style>

        <!-- Style cho các nút điều khiển cửa sổ -->
        <Style TargetType="Button" x:Key="WindowControlButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Text="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút Maximize/Restore -->
        <Style TargetType="Button" x:Key="MaximizeButtonStyle" BasedOn="{StaticResource WindowControlButton}">
            <Setter Property="Content" Value="&#xE922;"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                    <Setter Property="Content" Value="&#xE923;"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho PasswordBox có Icon và Chữ mờ -->
        <Style TargetType="PasswordBox" x:Key="PasswordBoxWithPlaceholderStyle">
            <Setter Property="Background" Value="#F0EDFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="30" Background="{TemplateBinding Background}">
                            <Grid Margin="26,0,26,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                       Width="20" Height="20" Margin="0,0,12,0" Opacity="0.3" VerticalAlignment="Center"/>
                                <ScrollViewer x:Name="PART_ContentHost" Grid.Column="1" VerticalAlignment="Center"/>
                                <TextBlock Text="{TemplateBinding ToolTip}" Grid.Column="1" IsHitTestVisible="False" 
                                           Foreground="#333333" Opacity="0.5" VerticalAlignment="Center" x:Name="PlaceholderText"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho nút Xác nhận -->
        <Style TargetType="Button" x:Key="ConfirmButtonStyle">
            <Setter Property="Background" Value="#0575E6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="59"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" CornerRadius="29.5" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Style="{StaticResource MainWindowBorderStyle}" Background="White" ClipToBounds="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="860*"/>
                <ColumnDefinition Width="580*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel bên trái (giữ nguyên) -->
            <Grid Grid.Column="0">
                <Border CornerRadius="10,0,0,10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#0575E6" Offset="0.0"/>
                            <GradientStop Color="#02298A" Offset="0.848"/>
                            <GradientStop Color="#021B79" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Canvas>
                    <Ellipse Width="556" Height="556" Stroke="#0575E6" StrokeThickness="1" Opacity="0.3" Canvas.Left="-160" Canvas.Bottom="-350"/>
                    <Ellipse Width="556" Height="556" Stroke="#0575E6" StrokeThickness="1" Opacity="0.3" Canvas.Left="-250" Canvas.Bottom="-300"/>
                </Canvas>
                <Viewbox Stretch="Uniform" Margin="80,0,40,0">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                        <TextBlock Text="Plumeria Family" FontSize="40" FontWeight="Bold" Foreground="White" TextWrapping="Wrap"/>
                        <TextBlock Text="Giải pháp số hóa quản lý cho thuê phòng hiệu quả" FontSize="18" FontWeight="Medium" Foreground="White" Margin="0,15,0,0" TextWrapping="Wrap" Opacity="0.9"/>
                    </StackPanel>
                </Viewbox>
            </Grid>

            <!-- Panel bên phải (Form Đặt lại mật khẩu) -->
            <Grid Grid.Column="1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0">
                    <Button Content="&#xE921;" Style="{StaticResource WindowControlButton}" Click="MinimizeButton_Click"/>
                    <Button Style="{StaticResource MaximizeButtonStyle}" Click="MaximizeButton_Click"/>
                    <Button Content="&#xE8BB;" Style="{StaticResource WindowControlButton}" Click="CloseButton_Click"/>
                </StackPanel>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30">
                    <!-- Tiêu đề và Phụ đề -->
                    <TextBlock Text="Đặt lại mật khẩu" FontSize="30" FontWeight="ExtraBlack" HorizontalAlignment="Center"/>
                    <TextBlock Text="Thiết lập lại mật khẩu để tiếp tục sử dụng"
                               TextAlignment="Center" FontSize="18" Foreground="#B6B6B6" Margin="0,15,0,40"/>

                    <!-- Ô nhập Mật khẩu mới -->
                    <PasswordBox x:Name="NewPasswordBox" Style="{StaticResource PasswordBoxWithPlaceholderStyle}"
                                 ToolTip="Mật khẩu mới"
                                 Tag="pack://application:,,,/Resources/Images/password_icon.png"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 Margin="0,0,0,20"/>

                    <!-- Ô nhập lại Mật khẩu -->
                    <PasswordBox x:Name="ConfirmPasswordBox" Style="{StaticResource PasswordBoxWithPlaceholderStyle}"
                                 ToolTip="Xác nhận mật khẩu"
                                 Tag="pack://application:,,,/Resources/Images/password_icon.png"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 Margin="0,0,0,40"/>

                    <!-- Nút Xác nhận -->
                    <Button Content="Xác nhận" Style="{StaticResource ConfirmButtonStyle}"/>

                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>