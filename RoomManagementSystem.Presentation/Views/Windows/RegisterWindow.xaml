<Window x:Class="RoomManagementSystem.Presentation.Views.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="720" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FontFamily="Roboto"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        UseLayoutRounding="True">

    <Window.Resources>
        <!-- Style cho các nút điều khiển cửa sổ -->
        <Style TargetType="Button" x:Key="WindowControlButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Text="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- CẬP NHẬT: Style chung cho Input Box với nền và kích thước mới -->
        <Style TargetType="Control" x:Key="InputBoxBaseStyle">
            <Setter Property="Background" Value="#CCF0EDFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- CẬP NHẬT: Style cho TextBox với bo góc mới -->
        <Style TargetType="TextBox" x:Key="TextBoxWithPlaceholderStyle" BasedOn="{StaticResource InputBoxBaseStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="30" Background="{TemplateBinding Background}">
                            <Grid Margin="26,0,26,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" Width="20" Height="20" Margin="0,0,12,0" Opacity="0.3"/>
                                <ScrollViewer x:Name="PART_ContentHost" Grid.Column="1" VerticalAlignment="Center"/>
                                <TextBlock Text="{TemplateBinding ToolTip}" Grid.Column="1" IsHitTestVisible="False" Foreground="#333333" Opacity="0.3" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CẬP NHẬT: Style cho PasswordBox với bo góc mới -->
        <Style TargetType="PasswordBox" x:Key="PasswordBoxWithPlaceholderStyle" BasedOn="{StaticResource InputBoxBaseStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="30" Background="{TemplateBinding Background}">
                            <Grid Margin="26,0,26,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" Width="20" Height="20" Margin="0,0,12,0" Opacity="0.3"/>
                                <ScrollViewer x:Name="PART_ContentHost" Grid.Column="1" VerticalAlignment="Center"/>
                                <TextBlock Text="{TemplateBinding ToolTip}" Grid.Column="1" IsHitTestVisible="False" Foreground="#333333" Opacity="0.3" VerticalAlignment="Center" x:Name="PlaceholderText"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho Nút Đăng ký với hiệu ứng DropShadow -->
        <Style TargetType="Button" x:Key="RegisterButtonStyle">
            <Setter Property="Background" Value="#0575E6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="57"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="3" Direction="315" Color="Black" Opacity="0.13" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" CornerRadius="28.5" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- BỐ CỤC CHÍNH -->
    <Border CornerRadius="10" Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="86*"/>
                <ColumnDefinition Width="58*"/>
            </Grid.ColumnDefinitions>

            <!-- PHẦN BÊN TRÁI (Gradient) - Giữ nguyên -->
            <Grid Grid.Column="0">
                <Border CornerRadius="10,0,0,10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#0575E6" Offset="0.0"/>
                            <GradientStop Color="#02298A" Offset="0.848"/>
                            <GradientStop Color="#021B79" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Canvas>
                    <Ellipse Width="556" Height="556" Stroke="#0575E6" StrokeThickness="1" Opacity="0.3" Canvas.Left="-250" Canvas.Bottom="-300"/>
                    <Ellipse Width="556" Height="556" Stroke="#0575E6" StrokeThickness="1" Opacity="0.3" Canvas.Left="-160" Canvas.Bottom="-350"/>
                </Canvas>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="80,0,80,0">
                    <TextBlock Text="Plumeria Family" FontSize="40" FontWeight="Bold" Foreground="White" TextWrapping="Wrap"/>
                    <TextBlock Text="Giải pháp số hóa quản lý cho thuê phòng hiệu quả" FontSize="18" FontWeight="Medium" Foreground="White" Margin="0,15,0,0" TextWrapping="Wrap" Opacity="0.9"/>
                </StackPanel>
            </Grid>

            <!-- PHẦN BÊN PHẢI (Form Đăng ký) - Cập nhật toàn bộ -->
            <Grid Grid.Column="1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0">
                    <Button Content="&#xE921;" Style="{StaticResource WindowControlButton}" Click="MinimizeButton_Click"/>
                    <Button Content="&#xE922;" Style="{StaticResource WindowControlButton}" Click="MaximizeButton_Click"/>
                    <Button Content="&#xE8BB;" Style="{StaticResource WindowControlButton}" Click="CloseButton_Click"/>
                </StackPanel>

                <!-- FORM ĐĂNG KÝ -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="60,0,60,0">
                    <TextBlock Text="Xin chào!" FontSize="26" FontWeight="Bold" Foreground="#333333" HorizontalAlignment="Center"/>
                    <TextBlock Text="Đăng ký để bắt đầu" FontSize="18" FontWeight="Normal" Foreground="#333333" Margin="0,5,0,30" HorizontalAlignment="Center"/>

                    <TextBox Style="{StaticResource TextBoxWithPlaceholderStyle}" ToolTip="Họ và tên" Tag="pack://application:,,,/Resources/Images/user_icon.png" Margin="0,0,0,16"/>
                    <TextBox Style="{StaticResource TextBoxWithPlaceholderStyle}" ToolTip="Địa chỉ email" Tag="pack://application:,,,/Resources/Images/email_icon.png" Margin="0,0,0,16"/>
                    <PasswordBox x:Name="PasswordInput" PasswordChanged="PasswordInput_PasswordChanged" Style="{StaticResource PasswordBoxWithPlaceholderStyle}" ToolTip="Mật khẩu" Tag="pack://application:,,,/Resources/Images/password_icon.png" Margin="0,0,0,16"/>
                    <TextBox Style="{StaticResource TextBoxWithPlaceholderStyle}" ToolTip="Số điện thoại" Tag="pack://application:,,,/Resources/Images/phone_icon.png" Margin="0,0,0,25"/>

                    <Button Content="Đăng ký" Style="{StaticResource RegisterButtonStyle}"/>

                    <TextBlock HorizontalAlignment="Center" Margin="0,25,0,0">
                        <Run Text="Đã có tài khoản?" Foreground="Black"/>
                        <Hyperlink Foreground="#0575E6" Cursor="Hand" Click="LoginHyperlink_Click">
                            <Run Text="Đăng nhập"/>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>