<UserControl x:Class="RoomManagementSystem.Presentation.Views.Shared.SidebarSmallView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="59"
             Background="#F0EDFF">

    <UserControl.Resources>
        <!-- Style cho các nút bấm chỉ chứa icon -->
        <Style TargetType="RadioButton" x:Key="SidebarIconButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="42"/>
            <!-- Giảm chiều cao để có thêm không gian -->
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="GroupName" Value="SidebarSmallMenuItems"/>
            <Setter Property="ToolTipService.ShowOnDisabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Margin="10,0">
                            <Grid>
                                <!-- Thanh chỉ báo được chọn -->
                                <Border x:Name="SelectedIndicator"
                                        Width="3"
                                        Height="20"
                                        Background="#5A67BA"
                                        CornerRadius="1.5"
                                        HorizontalAlignment="Left"
                                        Visibility="Collapsed"/>
                                <Image Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                       Width="22" Height="22"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#EBE8FF"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="RadioButton">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Margin="10,0">
                                    <Grid>
                                        <Border x:Name="SelectedIndicator"
                                                Width="3"
                                                Height="20"
                                                Background="#5A67BA"
                                                CornerRadius="1.5"
                                                HorizontalAlignment="Left"
                                                Visibility="Visible"/>
                                        <Image Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                               Width="22" Height="22"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EFEFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- === THAY ĐỔI: Sử dụng ScrollViewer và StackPanel để căn chỉnh vị trí === -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Logo -->
            <Grid Height="60">
                <Image Source="/RoomManagementSystem.Presentation;component/Resources/Images/logo_icon.png" 
                       Width="32" 
                       Height="32"
                       Stretch="UniformToFill">
                    <Image.OpacityMask>
                        <VisualBrush>
                            <VisualBrush.Visual>
                                <Ellipse Width="32" Height="32" Fill="Black"/>
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Image.OpacityMask>
                </Image>
            </Grid>

            <StackPanel Margin="0,15,0,0">
                <!-- Tổng quan (khớp với vị trí trên sidebar lớn) -->
                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="/RoomManagementSystem.Presentation;component/Resources/Images/tong_quan_icon.png" ToolTip="Tổng quan" />

                <!-- Khoảng trống khớp với tiêu đề "QUẢN LÝ" -->
                <Border Height="48" />

                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="/RoomManagementSystem.Presentation;component/Resources/Images/tai_san_icon.png" ToolTip="Tài sản"/>
                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="/RoomManagementSystem.Presentation;component/Resources/Images/nguoi_thue_icon.png" ToolTip="Người thuê" IsChecked="True"/>
                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="/RoomManagementSystem.Presentation;component/Resources/Images/hop_dong_icon.png" ToolTip="Hợp đồng"/>
                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="/RoomManagementSystem.Presentation;component/Resources/Images/lich_icon.png" ToolTip="Lịch"/>

                <!-- Khoảng trống khớp với tiêu đề "TÁC VỤ" -->
                <Border Height="48" />

                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="/RoomManagementSystem.Presentation;component/Resources/Images/bao_tri_icon.png" ToolTip="Bảo trì"/>
                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="/RoomManagementSystem.Presentation;component/Resources/Images/dich_vu_icon.png" ToolTip="Dịch vụ"/>
                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="/RoomManagementSystem.Presentation;component/Resources/Images/thanh_toan_icon.png" ToolTip="Thanh toán"/>

                <!-- Khoảng trống khớp với tiêu đề "KHÁC" -->
                <Border Height="48" />

                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="/RoomManagementSystem.Presentation;component/Resources/Images/bao_cao_icon.png" ToolTip="Báo cáo"/>
                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="/RoomManagementSystem.Presentation;component/Resources/Images/tro_giup_icon.png" ToolTip="Trợ giúp"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>