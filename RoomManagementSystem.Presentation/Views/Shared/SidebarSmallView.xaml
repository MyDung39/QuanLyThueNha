<UserControl x:Class="RoomManagementSystem.Presentation.Views.Shared.SidebarSmallView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="59"
             Background="#F0EDFF">

    <UserControl.Resources>
        <!-- Style cho các nút bấm chỉ chứa icon -->
        <Style TargetType="RadioButton" x:Key="SidebarIconButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="GroupName" Value="SidebarSmallMenuItems"/>
            <Setter Property="ToolTipService.ShowOnDisabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Margin="10,0">
                            <Grid>
                                <Border x:Name="SelectedIndicator" Width="3" Height="20" Background="#5A67BA" CornerRadius="1.5" HorizontalAlignment="Left" Visibility="Collapsed"/>
                                <Image Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" Width="22" Height="22" RenderOptions.BitmapScalingMode="HighQuality"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#EBE8FF"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="RadioButton">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Margin="10,0">
                                    <Grid>
                                        <Border x:Name="SelectedIndicator" Width="3" Height="20" Background="#5A67BA" CornerRadius="1.5" HorizontalAlignment="Left" Visibility="Visible"/>
                                        <Image Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" Width="22" Height="22" RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EFEFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- === THAY ĐỔI CẤU TRÚC Ở ĐÂY === -->
    <!-- Cấu trúc 2 hàng: Header cố định + nội dung cuộn -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header/Logo cố định -->
        <Grid Grid.Row="0">
            <Image Source="../../../Resources/Images/logo.png" 
                   Width="32" 
                   Height="32"
                   Stretch="UniformToFill">
                <Image.OpacityMask>
                    <VisualBrush>
                        <VisualBrush.Visual>
                            <Ellipse Width="1" Height="1" Fill="Black"/>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Image.OpacityMask>
            </Image>
        </Grid>

        <!-- Menu cuộn -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,15,0,0">
                <!-- Tổng quan -->
                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="../../../Resources/Images/tong_quan_icon.png" ToolTip="Tổng quan" />

                <!-- Khoảng trống khớp với tiêu đề "QUẢN LÝ" -->
                <Border Height="48" />

                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="../../../Resources/Images/tai_san_icon.png" ToolTip="Tài sản"/>
                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="../../../Resources/Images/nguoi_thue_icon.png" ToolTip="Người thuê" IsChecked="True"/>
                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="../../../Resources/Images/hop_dong_icon.png" ToolTip="Hợp đồng"/>
                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="../../../Resources/Images/lich_icon.png" ToolTip="Lịch"/>

                <!-- Khoảng trống khớp với tiêu đề "TÁC VỤ" -->
                <Border Height="48" />

                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="../../../Resources/Images/bao_tri_icon.png" ToolTip="Bảo trì"/>
                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="../../../Resources/Images/dich_vu_icon.png" ToolTip="Dịch vụ"/>
                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="../../../Resources/Images/thanh_toan_icon.png" ToolTip="Thanh toán"/>

                <!-- Khoảng trống khớp với tiêu đề "KHÁC" -->
                <Border Height="48" />

                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="../../../Resources/Images/bao_cao_icon.png" ToolTip="Báo cáo"/>
                <RadioButton Style="{StaticResource SidebarIconButton}" Tag="../../../Resources/Images/tro_giup_icon.png" ToolTip="Trợ giúp"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>