<UserControl x:Class="RoomManagementSystem.Presentation.Views.Shared.DeleteConfirmationModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="212" d:DesignWidth="446">
    
    <Grid>
        <!-- Modal Overlay -->
        <Rectangle Fill="#80000000" />
        
        <!-- Modal Content -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Modal Background -->
            <Border Background="White" 
                    CornerRadius="14" 
                    Width="435" 
                    Height="201"
                    Effect="{StaticResource DropShadowEffect}">
                
                <Grid Margin="20">
                    <!-- Header -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Title and Close Button -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Xóa người thuê" 
                                   FontFamily="Poppins" 
                                   FontSize="20" 
                                   Foreground="#8A8A8A" 
                                   VerticalAlignment="Center"/>
                        
                        <Button x:Name="CloseButton" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top"
                                Width="30" Height="30"
                                Background="Transparent" 
                                BorderThickness="0"
                                Click="CloseButton_Click"
                                Cursor="Hand">
                            <Path Data="M12 4L20 12M12 20L20 12M12 20L4 12M12 4L4 12" 
                                  Stroke="Black" 
                                  StrokeThickness="1.5" 
                                  Opacity="0.34"
                                  StrokeStartLineCap="Round" 
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"/>
                        </Button>
                    </Grid>
                    
                    <!-- Message -->
                    <TextBlock Grid.Row="1" 
                               Text="Bạn có muốn xóa những người dùng này không?" 
                               FontFamily="Poppins" 
                               FontSize="13" 
                               Foreground="#6F6F6F" 
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               Margin="0,20,0,0"/>
                    
                    <!-- Buttons -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,20,0,0">
                        
                        <!-- Cancel Button -->
                        <Button x:Name="CancelButton" 
                                Content="Hủy" 
                                Width="87" 
                                Height="36" 
                                Margin="0,0,10,0"
                                Background="Transparent" 
                                BorderThickness="1" 
                                BorderBrush="#E0E0E0"
                                Foreground="#6F6F6F"
                                FontFamily="Roboto" 
                                FontSize="14" 
                                FontWeight="500"
                                Click="CancelButton_Click"
                                Cursor="Hand"/>
                        
                        <!-- Confirm Button -->
                        <Button x:Name="ConfirmButton" 
                                Content="Xác nhận" 
                                Width="87" 
                                Height="36" 
                                Background="#0FE00000"
                                BorderThickness="0"
                                Foreground="#E00000"
                                FontFamily="Roboto" 
                                FontSize="14" 
                                FontWeight="500"
                                Click="ConfirmButton_Click"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
    
    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" 
                          Color="Black" 
                          Direction="135" 
                          ShadowDepth="2.7" 
                          BlurRadius="5.4" 
                          Opacity="0.14"/>
    </UserControl.Resources>
</UserControl>
