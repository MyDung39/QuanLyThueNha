<UserControl x:Class="RoomManagementSystem.Presentation.Views.Shared.SidebarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="240"
             Background="#F7F5FF" 
             FontFamily="Roboto">

    <UserControl.Resources>
        <!-- Style cho RadioButton menu -->
        <Style TargetType="RadioButton" x:Key="SidebarRadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6E7892"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="15,2,15,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="GroupName" Value="SidebarMenuItems"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="{TemplateBinding Padding}">
                                <Image x:Name="Icon" Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" Width="20" Height="20" Margin="0,0,15,0" Opacity="0.7"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#EBE8FF"/>
                    <Setter Property="Foreground" Value="#5A67BA"/>
                    <Setter Property="FontWeight" Value="Medium"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EFEFFF"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#E5E1FF"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho các tiêu đề mục (Quản lý, Tác vụ, Khác) -->
        <Style TargetType="TextBlock" x:Key="SectionHeader">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#98A2B3"/>
            <Setter Property="Margin" Value="35,25,0,10"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="Grayscale"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header/Logo -->
        <Border Grid.Row="0" Background="#F0EDFF">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="25,0,0,0">
                <Image Source="/Resources/Images/logo.png" 
                       Width="32" 
                       Height="32"
                       Stretch="UniformToFill">
                    <Image.OpacityMask>
                        <VisualBrush>
                            <VisualBrush.Visual>
                                <!-- Khuôn cắt hình tròn -->
                                <Ellipse Width="1" Height="1" Fill="Black"/>
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Image.OpacityMask>
                </Image>

                <TextBlock Text="Plumeria Family"
                           Foreground="#5A67BA"
                           FontFamily="Poppins"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Menu Items -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,15,0,0">
                <RadioButton Content="Tổng quan" 
                             Style="{StaticResource SidebarRadioButton}" 
                             Tag="/Resources/Images/tong_quan_icon.png"/>

                <TextBlock Text="QUẢN LÝ" Style="{StaticResource SectionHeader}"/>
                <RadioButton Content="Tài sản" 
                             Style="{StaticResource SidebarRadioButton}"

                             Tag="/Resources/Images/tai_san_icon.png"
                             Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                             CommandParameter="HouseManagement"/>

                
                
            <!--    <RadioButton Content="Người thuê" 
                             Style="{StaticResource SidebarRadioButton}"
                             Tag="/Resources/Images/nguoi_thue_icon.png"
                             IsChecked="True"/>
                -->


                <RadioButton Content="Người thuê" 
                             Style="{StaticResource SidebarRadioButton}"
                             Tag="/Resources/Images/nguoi_thue_icon.png"
                             IsChecked="True"
             
                             Command="{Binding DataContext.NavigateCommand, 
                                               RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                             CommandParameter="Tenant"/>

                <RadioButton Content="Hợp đồng" 
                             Style="{StaticResource SidebarRadioButton}"
                             Tag="/Resources/Images/hop_dong_icon.png"/>
                <RadioButton Content="Lịch" 
                             Style="{StaticResource SidebarRadioButton}"
                             Tag="/Resources/Images/lich_icon.png"/>
                <TextBlock Text="TÁC VỤ" Style="{StaticResource SectionHeader}"/>
                <RadioButton Content="Bảo trì" 
                             Style="{StaticResource SidebarRadioButton}"
                             Tag="/Resources/Images/bao_tri_icon.png"/>
                <RadioButton Content="Dịch vụ" 
                             Style="{StaticResource SidebarRadioButton}"
                             Tag="/Resources/Images/dich_vu_icon.png"/>
             <!--   <RadioButton Content="Thanh toán" 
                             Style="{StaticResource SidebarRadioButton}"
                             Tag="/Resources/Images/thanh_toan_icon.png"/>  -->

            <!--    <RadioButton Content="Thanh toán" 
                             Style="{StaticResource SidebarRadioButton}"
                             Tag="/Resources/Images/thanh_toan_icon.png"
                             IsChecked="{Binding IsBillingSelected, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Checked="Billing_Checked"/>  -->
                
                <RadioButton Content="Thanh toán" 
                             Style="{StaticResource SidebarRadioButton}" 
                             Tag="/Resources/Images/thanh_toan_icon.png"
                             Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                             CommandParameter="Billing"/>

                <TextBlock Text="KHÁC" Style="{StaticResource SectionHeader}"/>
                <RadioButton Content="Báo cáo" 
                             Style="{StaticResource SidebarRadioButton}"
                             Tag="/Resources/Images/bao_cao_icon.png"/>
                <RadioButton Content="Trợ giúp" 
                             Style="{StaticResource SidebarRadioButton}"
                             Tag="/Resources/Images/tro_giup_icon.png"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>